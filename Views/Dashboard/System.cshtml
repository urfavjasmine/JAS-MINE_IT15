@model JAS_MINE_IT15.Controllers.SystemDashboardViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "System Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dash-wrap { padding: 14px 6px; }
    .dash-title { font-size: 34px; font-weight: 800; margin-bottom: 4px; }
    .dash-sub { color: #6b778a; margin-bottom: 18px; }

    .stat-card {
        border: 1px solid #e6ebf2;
        border-radius: 12px;
        box-shadow: 0 1px 2px rgba(16,24,40,.06);
        background: #fff;
        padding: 20px;
        transition: transform .15s ease;
    }
    .stat-card:hover { transform: translateY(-2px); }
    .stat-card .stat-label { color: #6b778a; font-size: 14px; }
    .stat-card .stat-value { font-size: 32px; font-weight: 800; line-height: 1.1; margin-top: 6px; }

    .panel-card {
        border: 1px solid #e6ebf2;
        border-radius: 12px;
        box-shadow: 0 1px 2px rgba(16,24,40,.06);
        background: #fff;
        margin-bottom: 20px;
    }
    .panel-head { padding: 16px 18px 10px 18px; border-bottom: 1px solid #edf1f7; }
    .panel-title { font-weight: 800; font-size: 16px; margin: 0; display: flex; align-items: center; gap: 10px; }
    .panel-body { padding: 18px; }

    .activity-item { padding: 12px 0; border-bottom: 1px solid #edf1f7; }
    .activity-item:last-child { border-bottom: none; }
    .activity-icon {
        width: 36px; height: 36px; border-radius: 10px;
        display: inline-flex; align-items: center; justify-content: center;
        background: #f2f5f9;
    }

    .badge-pending { background: #fff8e5; color: #b58105; border: 1px solid #f5d96e; }
    .badge-success { background: #e8f8ef; color: #1e8449; border: 1px solid #7dcea0; }
</style>

<div class="dash-wrap">
    <!-- System-Wide Stats -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-4">
            <div class="stat-card">
                <div class="stat-label"><i class="bi bi-building me-1"></i> Total Barangays</div>
                <div class="stat-value text-primary">@Model.TotalBarangays</div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="stat-card">
                <div class="stat-label"><i class="bi bi-people me-1"></i> Total Users</div>
                <div class="stat-value text-info">@Model.TotalUsers</div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="stat-card">
                <div class="stat-label"><i class="bi bi-credit-card me-1"></i> Active Subscriptions</div>
                <div class="stat-value text-success">@Model.ActiveSubscriptions</div>
            </div>
        </div>
    </div>

    <!-- Pending Approvals -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="panel-card">
                <div class="panel-head">
                    <h5 class="panel-title"><i class="bi bi-hourglass-split text-warning"></i> Pending Approvals</h5>
                </div>
                <div class="panel-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span><i class="bi bi-file-earmark-text me-2"></i> Pending Documents</span>
                        <span class="badge badge-pending">@Model.PendingDocuments</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-journal-text me-2"></i> Pending Policies</span>
                        <span class="badge badge-pending">@Model.PendingPolicies</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel-card">
                <div class="panel-head">
                    <h5 class="panel-title"><i class="bi bi-lightning text-primary"></i> Quick Actions</h5>
                </div>
                <div class="panel-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("UserManagement", "Home")" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-people me-1"></i> Manage Users
                        </a>
                        <a href="@Url.Action("BarangaySubscriptions", "Home")" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-building me-1"></i> Manage Subscriptions
                        </a>
                        <a href="@Url.Action("AuditLogs", "Home")" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-clock-history me-1"></i> View Audit Logs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="panel-card">
        <div class="panel-head">
            <h5 class="panel-title"><i class="bi bi-activity text-info"></i> Recent System Activity</h5>
        </div>
        <div class="panel-body">
            @if (Model.RecentActivity.Any())
            {
                @foreach (var item in Model.RecentActivity)
                {
                    <div class="activity-item d-flex align-items-start gap-3">
                        <div class="activity-icon">
                            <i class="bi bi-clock-history"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-semibold">@item.User <span class="text-muted fw-normal">@item.Action</span></div>
                            <small class="text-muted">@item.Module - @item.Target</small>
                        </div>
                        <small class="text-muted">@item.Timestamp</small>
                    </div>
                }
            }
            else
            {
                <p class="text-muted mb-0">No recent activity.</p>
            }
        </div>
    </div>
</div>
