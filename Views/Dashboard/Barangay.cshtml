@model JAS_MINE_IT15.Controllers.BarangayDashboardViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Barangay Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Null-safe properties
    var warningMessage = Model?.WarningMessage ?? "";
    var isViewOnly = Model?.IsViewOnly ?? false;
    var canModify = Model?.CanModify ?? false;
    var barangayName = Model?.BarangayName ?? "Barangay";
    var roleLabel = Model?.RoleLabel ?? "";
    var role = Model?.Role ?? "";
    var recentActivity = Model?.RecentActivity ?? new List<JAS_MINE_IT15.Controllers.ActivityItem>();
    var recentAnnouncements = Model?.RecentAnnouncements ?? new List<JAS_MINE_IT15.Controllers.DashboardAnnouncementItem>();
    var recentlyApproved = Model?.RecentlyApproved ?? new List<JAS_MINE_IT15.Controllers.ApprovedItem>();
    
    // Role checks
    var isAdmin = role == "barangay_admin";
    var isSecretary = role == "barangay_secretary";
    var isStaff = role == "barangay_staff";
    var isCouncil = role == "council_member";
}

<style>
    .dash-wrap { padding: 14px 6px; }
    .dash-title { font-size: 34px; font-weight: 800; margin-bottom: 4px; }
    .dash-sub { color: #6b778a; margin-bottom: 18px; }

    .stat-card {
        border: 1px solid #e6ebf2;
        border-radius: 12px;
        box-shadow: 0 1px 2px rgba(16,24,40,.06);
        background: #fff;
        padding: 20px;
        transition: transform .15s ease;
    }
    .stat-card:hover { transform: translateY(-2px); }
    .stat-card .stat-label { color: #6b778a; font-size: 14px; }
    .stat-card .stat-value { font-size: 32px; font-weight: 800; line-height: 1.1; margin-top: 6px; }

    .panel-card {
        border: 1px solid #e6ebf2;
        border-radius: 12px;
        box-shadow: 0 1px 2px rgba(16,24,40,.06);
        background: #fff;
        margin-bottom: 20px;
    }
    .panel-head { padding: 16px 18px 10px 18px; border-bottom: 1px solid #edf1f7; }
    .panel-title { font-weight: 800; font-size: 16px; margin: 0; display: flex; align-items: center; gap: 10px; }
    .panel-body { padding: 18px; }

    .activity-item { padding: 12px 0; border-bottom: 1px solid #edf1f7; }
    .activity-item:last-child { border-bottom: none; }
    .activity-icon {
        width: 36px; height: 36px; border-radius: 10px;
        display: inline-flex; align-items: center; justify-content: center;
        background: #f2f5f9;
    }

    .badge-pending { background: #fff8e5; color: #b58105; border: 1px solid #f5d96e; }
    .badge-success { background: #e8f8ef; color: #1e8449; border: 1px solid #7dcea0; }
    .badge-warning { background: #fff3cd; color: #856404; }
    .badge-danger { background: #f8d7da; color: #721c24; }
    .badge-info { background: #d1ecf1; color: #0c5460; border: 1px solid #bee5eb; }

    .subscription-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px;
        padding: 20px;
    }
    .subscription-card .sub-label { opacity: 0.8; font-size: 13px; }
    .subscription-card .sub-value { font-size: 20px; font-weight: 700; }

    .view-only-banner {
        background: #fff3cd;
        border: 1px solid #ffc107;
        border-radius: 8px;
        padding: 12px 16px;
        margin-bottom: 20px;
    }

    .team-card {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
        border-radius: 12px;
        padding: 20px;
    }

    .contribution-card {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border-radius: 12px;
        padding: 20px;
    }

    .announcement-item {
        padding: 12px 0;
        border-bottom: 1px solid #edf1f7;
    }
    .announcement-item:last-child { border-bottom: none; }
    .announcement-pinned { background: #fffbeb; border-left: 3px solid #f59e0b; padding-left: 12px; margin-left: -12px; }

    .approved-item { padding: 10px 0; border-bottom: 1px solid #edf1f7; }
    .approved-item:last-child { border-bottom: none; }
</style>

<div class="dash-wrap">
    @if (!string.IsNullOrEmpty(warningMessage))
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @warningMessage
        </div>
    }

    @* ========== COUNCIL MEMBER: View-Only Banner ========== *@
    @if (isCouncil)
    {
        <div class="view-only-banner d-flex align-items-center">
            <i class="bi bi-eye me-2"></i>
            <span><strong>View-Only Access:</strong> As a Council Member, you can view data but cannot create, edit, or delete records.</span>
        </div>
    }

    @* ========== STATS SECTION - Role-specific cards ========== *@
    @if (isAdmin || isSecretary || isCouncil)
    {
        @* ADMIN/SECRETARY/COUNCIL: Show all 5 stats *@
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-4 col-lg">
                <div class="stat-card">
                    <div class="stat-label"><i class="bi bi-file-earmark-text me-1"></i> Documents</div>
                    <div class="stat-value text-primary">@(Model?.TotalDocuments ?? 0)</div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg">
                <div class="stat-card">
                    <div class="stat-label"><i class="bi bi-journal-text me-1"></i> Policies</div>
                    <div class="stat-value text-info">@(Model?.TotalPolicies ?? 0)</div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg">
                <div class="stat-card">
                    <div class="stat-label"><i class="bi bi-lightbulb me-1"></i> Best Practices</div>
                    <div class="stat-value text-success">@(Model?.TotalBestPractices ?? 0)</div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg">
                <div class="stat-card">
                    <div class="stat-label"><i class="bi bi-book me-1"></i> Lessons Learned</div>
                    <div class="stat-value text-warning">@(Model?.TotalLessonsLearned ?? 0)</div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg">
                <div class="stat-card">
                    <div class="stat-label"><i class="bi bi-megaphone me-1"></i> Announcements</div>
                    <div class="stat-value text-danger">@(Model?.TotalAnnouncements ?? 0)</div>
                </div>
            </div>
        </div>
    }
    else if (isStaff)
    {
        @* STAFF: Show only relevant stats (Documents, Best Practices, Lessons) *@
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-4">
                <div class="stat-card">
                    <div class="stat-label"><i class="bi bi-file-earmark-text me-1"></i> Documents</div>
                    <div class="stat-value text-primary">@(Model?.TotalDocuments ?? 0)</div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="stat-card">
                    <div class="stat-label"><i class="bi bi-lightbulb me-1"></i> Best Practices</div>
                    <div class="stat-value text-success">@(Model?.TotalBestPractices ?? 0)</div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="stat-card">
                    <div class="stat-label"><i class="bi bi-book me-1"></i> Lessons Learned</div>
                    <div class="stat-value text-warning">@(Model?.TotalLessonsLearned ?? 0)</div>
                </div>
            </div>
        </div>
    }

    <div class="row g-3 mb-4">
        @* ========== ADMIN: Team Overview + Subscription ========== *@
        @if (isAdmin)
        {
            <div class="col-md-4">
                <div class="team-card">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="sub-label" style="opacity: 0.8; font-size: 13px;">Team Overview</div>
                            <div style="font-size: 20px; font-weight: 700;">@(Model?.StaffCount ?? 0) Staff Members</div>
                        </div>
                        <i class="bi bi-people" style="font-size: 28px; opacity: 0.7;"></i>
                    </div>
                    <div>
                        <span style="opacity: 0.8; font-size: 13px;">Active in last 7 days:</span>
                        <span style="font-weight: 700;">@(Model?.RecentLoginsCount ?? 0)</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="subscription-card h-100">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <div class="sub-label">Current Plan</div>
                            <div class="sub-value">@(Model?.SubscriptionPlan ?? "No Active Plan")</div>
                        </div>
                        <i class="bi bi-credit-card-2-front" style="font-size: 24px; opacity: 0.7;"></i>
                    </div>
                    <div class="d-flex gap-3">
                        <div>
                            <div class="sub-label">Status</div>
                            <div style="font-weight: 600;">@(Model?.SubscriptionStatus ?? "N/A")</div>
                        </div>
                        <div>
                            <div class="sub-label">Expires</div>
                            <div style="font-weight: 600;">@(Model?.SubscriptionEndDate ?? "N/A")</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel-card h-100">
                    <div class="panel-head">
                        <h5 class="panel-title"><i class="bi bi-hourglass-split text-warning"></i> Pending Approvals</h5>
                    </div>
                    <div class="panel-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="bi bi-file-earmark-text me-2"></i> Documents</span>
                            <span class="badge badge-pending">@(Model?.PendingDocuments ?? 0)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-journal-text me-2"></i> Policies</span>
                            <span class="badge badge-pending">@(Model?.PendingPolicies ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* ========== SECRETARY: My Submissions + Subscription + Pending ========== *@
        @if (isSecretary)
        {
            <div class="col-md-4">
                <div class="contribution-card">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div style="opacity: 0.8; font-size: 13px;">My Submissions</div>
                            <div style="font-size: 20px; font-weight: 700;">Documents & Policies</div>
                        </div>
                        <i class="bi bi-send-check" style="font-size: 28px; opacity: 0.7;"></i>
                    </div>
                    <div class="d-flex gap-4">
                        <div>
                            <span style="opacity: 0.8; font-size: 13px;">Documents:</span>
                            <span style="font-weight: 700;">@(Model?.MySubmittedDocuments ?? 0)</span>
                        </div>
                        <div>
                            <span style="opacity: 0.8; font-size: 13px;">Policies:</span>
                            <span style="font-weight: 700;">@(Model?.MySubmittedPolicies ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="subscription-card h-100">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <div class="sub-label">Current Plan</div>
                            <div class="sub-value">@(Model?.SubscriptionPlan ?? "No Active Plan")</div>
                        </div>
                        <i class="bi bi-credit-card-2-front" style="font-size: 24px; opacity: 0.7;"></i>
                    </div>
                    <div class="d-flex gap-3">
                        <div>
                            <div class="sub-label">Status</div>
                            <div style="font-weight: 600;">@(Model?.SubscriptionStatus ?? "N/A")</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel-card h-100">
                    <div class="panel-head">
                        <h5 class="panel-title"><i class="bi bi-hourglass-split text-warning"></i> Pending Approvals</h5>
                    </div>
                    <div class="panel-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="bi bi-file-earmark-text me-2"></i> Documents</span>
                            <span class="badge badge-pending">@(Model?.PendingDocuments ?? 0)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-journal-text me-2"></i> Policies</span>
                            <span class="badge badge-pending">@(Model?.PendingPolicies ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* ========== STAFF: My Contributions ========== *@
        @if (isStaff)
        {
            <div class="col-12">
                <div class="contribution-card">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div style="opacity: 0.8; font-size: 13px;">My Contributions</div>
                            <div style="font-size: 20px; font-weight: 700;">Your uploaded content</div>
                        </div>
                        <i class="bi bi-trophy" style="font-size: 28px; opacity: 0.7;"></i>
                    </div>
                    <div class="d-flex gap-4">
                        <div>
                            <i class="bi bi-file-earmark-text me-1"></i>
                            <span style="opacity: 0.8;">Documents:</span>
                            <span style="font-weight: 700; font-size: 18px;">@(Model?.MyDocuments ?? 0)</span>
                        </div>
                        <div>
                            <i class="bi bi-lightbulb me-1"></i>
                            <span style="opacity: 0.8;">Best Practices:</span>
                            <span style="font-weight: 700; font-size: 18px;">@(Model?.MyBestPractices ?? 0)</span>
                        </div>
                        <div>
                            <i class="bi bi-book me-1"></i>
                            <span style="opacity: 0.8;">Lessons:</span>
                            <span style="font-weight: 700; font-size: 18px;">@(Model?.MyLessonsLearned ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @* ========== QUICK ACTIONS - Role-specific buttons ========== *@
    @if (canModify && !isCouncil)
    {
        <div class="panel-card mb-4">
            <div class="panel-head">
                <h5 class="panel-title"><i class="bi bi-lightning text-primary"></i> Quick Actions</h5>
            </div>
            <div class="panel-body">
                <div class="row g-2">
                    @* All roles can add documents *@
                    <div class="col-6 col-md-3">
                        <a href="@Url.Action("KnowledgeRepository", "Home")" class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-file-earmark-plus me-1"></i> Add Document
                        </a>
                    </div>
                    
                    @* Admin & Secretary can add policies *@
                    @if (isAdmin || isSecretary)
                    {
                        <div class="col-6 col-md-3">
                            <a href="@Url.Action("PoliciesManagement", "Home")" class="btn btn-outline-info btn-sm w-100">
                                <i class="bi bi-journal-plus me-1"></i> Add Policy
                            </a>
                        </div>
                    }
                    
                    @* Admin, Secretary & Staff can share practices *@
                    <div class="col-6 col-md-3">
                        <a href="@Url.Action("BestPractices", "Home")" class="btn btn-outline-success btn-sm w-100">
                            <i class="bi bi-lightbulb me-1"></i> Share Practice
                        </a>
                    </div>
                    
                    @* Staff can add lessons learned *@
                    @if (isStaff)
                    {
                        <div class="col-6 col-md-3">
                            <a href="@Url.Action("LessonsLearned", "Home")" class="btn btn-outline-warning btn-sm w-100">
                                <i class="bi bi-book me-1"></i> Add Lesson
                            </a>
                        </div>
                    }
                    
                    @* Admin & Secretary can post announcements *@
                    @if (isAdmin || isSecretary)
                    {
                        <div class="col-6 col-md-3">
                            <a href="@Url.Action("Announcements", "Home")" class="btn btn-outline-danger btn-sm w-100">
                                <i class="bi bi-megaphone me-1"></i> Post Announcement
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <div class="row g-3">
        @* ========== STAFF & COUNCIL: Recent Announcements ========== *@
        @if ((isStaff || isCouncil) && recentAnnouncements.Any())
        {
            <div class="col-md-6">
                <div class="panel-card">
                    <div class="panel-head">
                        <h5 class="panel-title"><i class="bi bi-megaphone text-danger"></i> Recent Announcements</h5>
                    </div>
                    <div class="panel-body">
                        @foreach (var ann in recentAnnouncements)
                        {
                            <div class="announcement-item @(ann.IsPinned ? "announcement-pinned" : "")">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        @if (ann.IsPinned)
                                        {
                                            <i class="bi bi-pin-angle-fill text-warning me-1"></i>
                                        }
                                        <strong>@ann.Title</strong>
                                        @if (ann.Priority == "high")
                                        {
                                            <span class="badge badge-danger ms-1">Urgent</span>
                                        }
                                    </div>
                                    <small class="text-muted">@ann.PostedAt</small>
                                </div>
                                <p class="text-muted mb-1 small">@ann.Content</p>
                                <small class="text-muted">Posted by @ann.PostedBy</small>
                            </div>
                        }
                        <div class="mt-3">
                            <a href="@Url.Action("Announcements", "Home")" class="btn btn-outline-secondary btn-sm">
                                View All Announcements <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* ========== COUNCIL: Recently Approved Items ========== *@
        @if (isCouncil && recentlyApproved.Any())
        {
            <div class="col-md-6">
                <div class="panel-card">
                    <div class="panel-head">
                        <h5 class="panel-title"><i class="bi bi-check-circle text-success"></i> Recently Approved</h5>
                    </div>
                    <div class="panel-body">
                        @foreach (var item in recentlyApproved)
                        {
                            <div class="approved-item d-flex align-items-center gap-3">
                                <div class="activity-icon">
                                    @if (item.Type == "Document")
                                    {
                                        <i class="bi bi-file-earmark-check text-primary"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-journal-check text-info"></i>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-semibold">@item.Title</div>
                                    <small class="text-muted">@item.Type Â· Approved by @item.ApprovedBy</small>
                                </div>
                                <small class="text-muted">@item.ApprovedAt</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        @* ========== Recent Activity ========== *@
        <div class="@(((isStaff || isCouncil) && (recentAnnouncements.Any() || recentlyApproved.Any())) ? "col-md-6" : "col-12")">
            <div class="panel-card">
                <div class="panel-head">
                    <h5 class="panel-title"><i class="bi bi-activity text-info"></i> Recent Activity</h5>
                </div>
                <div class="panel-body">
                    @if (recentActivity.Any())
                    {
                        @foreach (var item in recentActivity.Take(isCouncil || isStaff ? 5 : 10))
                        {
                            <div class="activity-item d-flex align-items-start gap-3">
                                <div class="activity-icon">
                                    <i class="bi bi-clock-history"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-semibold">@item.User <span class="text-muted fw-normal">@item.Action</span></div>
                                    <small class="text-muted">@item.Module - @item.Target</small>
                                </div>
                                <small class="text-muted">@item.Timestamp</small>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">No recent activity in your barangay.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
