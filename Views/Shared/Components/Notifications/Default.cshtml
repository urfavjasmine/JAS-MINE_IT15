@model JAS_MINE_IT15.ViewComponents.NotificationsViewModel

<div class="dropdown">
    <button type="button"
            class="btn btn-outline-secondary position-relative"
            data-bs-toggle="dropdown"
            aria-expanded="false"
            title="Notifications">

        <i class="bi bi-bell"></i>

        @if (Model.UnreadCount > 0)
        {
            <span class="badge bg-success position-absolute top-0 start-100 translate-middle rounded-pill">
                @Model.UnreadCount
            </span>
        }
    </button>

    <div class="dropdown-menu dropdown-menu-end shadow p-2" style="width:320px;">
        <div class="d-flex justify-content-between align-items-center px-2">
            <strong>Notifications</strong>
            @if (Model.UnreadCount > 0)
            {
                <span class="badge bg-secondary rounded-pill">@Model.UnreadCount new</span>
            }
        </div>

        <hr class="my-2" />

        @if (Model.Notifications.Any())
        {
            foreach (var n in Model.Notifications)
            {
                var iconClass = n.Type switch
                {
                    "announcement" => "bi-megaphone text-primary",
                    "pending" => "bi-clock text-warning",
                    "approval" => "bi-check-circle text-success",
                    _ => "bi-bell text-secondary"
                };

                <a href="@n.Link" class="dropdown-item small py-2 d-block text-decoration-none" style="white-space: normal;">
                    <div class="d-flex align-items-start gap-2">
                        @if (n.Unread)
                        {
                            <span class="bg-success rounded-circle flex-shrink-0 mt-1" style="width:8px;height:8px;"></span>
                        }
                        else
                        {
                            <span class="flex-shrink-0 mt-1" style="width:8px;height:8px;"></span>
                        }
                        <div>
                            <i class="bi @iconClass me-1"></i>
                            <span class="fw-medium text-dark">@n.Title</span>
                            <div class="text-muted" style="font-size: 11px;">@n.Time</div>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="text-center text-muted py-3">
                <i class="bi bi-bell-slash fs-4 d-block mb-2"></i>
                No notifications
            </div>
        }

        <hr class="my-2" />

        <div class="text-center">
            <a href="@Url.Action("Announcements", "Home")" class="small text-primary text-decoration-none">
                View all announcements
            </a>
        </div>
    </div>
</div>
