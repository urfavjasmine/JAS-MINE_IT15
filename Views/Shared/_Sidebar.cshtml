                </a>

                <a class="jm-item @(IsActive("SubscriptionPayments") ? "active" : "")" href="@Url.Action("SubscriptionPayments", "Home")">
                    <div class="jm-icon"><i class="bi bi-receipt"></i></div>
                    <div class="jm-text">Subscription Payments</div>
                </a>
            </div>
        }

