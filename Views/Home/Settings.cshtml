@model JAS_MINE_IT15.Models.SettingsViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userName = Context.Session.GetString("UserName") ?? "Jasminetampus30";
    var barangay = Context.Session.GetString("Barangay") ?? "Barangay San Antonio";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .page-wrap {
        padding: 18px;
    }

    .muted {
        color: #6b7280;
    }

    .tab-pill {
        border-radius: 10px;
    }

    .card-soft {
        border-radius: 14px;
        border: 1px solid #e5e7eb;
    }

    .form-control, .form-select {
        border-radius: 10px;
    }

    .btn-soft {
        border-radius: 10px;
    }
</style>

<div class="page-wrap">

    <div class="mb-3">
        <h3 class="mb-0">Settings</h3>
        <div class="muted">Manage system and account preferences.</div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <!-- Tabs -->
    <div class="d-flex gap-2 mb-4">
        <a class="btn btn-sm @(Model.Tab == "general" ? "btn-light" : "btn-outline-secondary") tab-pill"
           href="@Url.Action("Settings", "Home", new { tab = "general" })">General</a>

        <a class="btn btn-sm @(Model.Tab == "notifications" ? "btn-light" : "btn-outline-secondary") tab-pill"
           href="@Url.Action("Settings", "Home", new { tab = "notifications" })">Notifications</a>

        <a class="btn btn-sm @(Model.Tab == "security" ? "btn-light" : "btn-outline-secondary") tab-pill"
           href="@Url.Action("Settings", "Home", new { tab = "security" })">Security</a>

        <a class="btn btn-sm @(Model.Tab == "system" ? "btn-light" : "btn-outline-secondary") tab-pill"
           href="@Url.Action("Settings", "Home", new { tab = "system" })">System</a>
    </div>

    @if (Model.Tab == "general")
    {
        <div class="card card-soft">
            <div class="card-body p-4">
                <h5 class="mb-1">Profile Information</h5>
                <div class="muted mb-3">Update your personal details.</div>

                <form method="post" action="@Url.Action("SaveProfile","Home")">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label fw-semibold">Full Name</label>
                            <input class="form-control" name="FullName" value="@Model.FullName" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label fw-semibold">Email</label>
                            <input class="form-control" type="email" name="Email" value="@Model.Email" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label fw-semibold">Barangay</label>
                            <input class="form-control" name="Barangay" value="@Model.Barangay" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label fw-semibold">Language</label>
                            <select class="form-select" name="Language">
                                <option value="en" selected="@(Model.Language == "en")">English</option>
                                <option value="fil" selected="@(Model.Language == "fil")">Filipino</option>
                            </select>
                        </div>
                    </div>

                    <button class="btn btn-primary btn-soft mt-4" type="submit">Save Changes</button>
                </form>
            </div>
        </div>
    }
    else if (Model.Tab == "notifications")
    {
        <div class="card card-soft">
            <div class="card-body p-4">
                <h5 class="mb-1">Notification Preferences</h5>
                <div class="muted mb-3">Choose what notifications you receive.</div>

                <form method="post" action="@Url.Action("SaveNotifications","Home")">
                    @Html.AntiForgeryToken()

                    <div class="form-check form-switch d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <div class="fw-semibold">Document approvals</div>
                            <div class="muted small">Get notified when documents need your approval</div>
                        </div>
                        <input class="form-check-input" type="checkbox" name="NotifApprovals" value="true" @(Model.NotifApprovals ? "checked" : "") />
                    </div>

                    <div class="form-check form-switch d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <div class="fw-semibold">Policy updates</div>
                            <div class="muted small">Receive alerts when policies are created or updated</div>
                        </div>
                        <input class="form-check-input" type="checkbox" name="NotifPolicyUpdates" value="true" @(Model.NotifPolicyUpdates ? "checked" : "") />
                    </div>

                    <div class="form-check form-switch d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <div class="fw-semibold">New submissions</div>
                            <div class="muted small">Notifications for new lessons learned submissions</div>
                        </div>
                        <input class="form-check-input" type="checkbox" name="NotifSubmissions" value="true" @(Model.NotifSubmissions ? "checked" : "") />
                    </div>

                    <div class="form-check form-switch d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <div class="fw-semibold">Announcements</div>
                            <div class="muted small">System-wide announcements and notices</div>
                        </div>
                        <input class="form-check-input" type="checkbox" name="NotifAnnouncements" value="true" @(Model.NotifAnnouncements ? "checked" : "") />
                    </div>

                    <div class="form-check form-switch d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <div class="fw-semibold">Discussion replies</div>
                            <div class="muted small">Replies to your discussion threads</div>
                        </div>
                        <input class="form-check-input" type="checkbox" name="NotifReplies" value="true" @(Model.NotifReplies ? "checked" : "") />
                    </div>

                    <button class="btn btn-primary btn-soft mt-3" type="submit">Save Preferences</button>
                </form>
            </div>
        </div>
    }
    else if (Model.Tab == "security")
    {
        <div class="row g-3">
            <div class="col-12 col-lg-7">
                <div class="card card-soft">
                    <div class="card-body p-4">
                        <h5 class="mb-1">Change Password</h5>
                        <div class="muted mb-3">Update your account password.</div>

                        <form method="post" action="@Url.Action("UpdatePassword","Home")">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Current Password</label>
                                <input class="form-control" type="password" name="currentPassword" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">New Password</label>
                                <input class="form-control" type="password" name="newPassword" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Confirm New Password</label>
                                <input class="form-control" type="password" name="confirmPassword" />
                            </div>

                            <button class="btn btn-primary btn-soft" type="submit">Update Password</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-5">
                <div class="card card-soft">
                    <div class="card-body p-4">
                        <h5 class="mb-1">Two-Factor Authentication</h5>
                        <div class="muted mb-3">Add an extra layer of security.</div>

                        <form method="post" action="@Url.Action("ToggleTwoFa","Home")">
                            @Html.AntiForgeryToken()

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">Enable 2FA</div>
                                    <div class="muted small">Use an authenticator app for login verification.</div>
                                </div>

                                <input class="form-check-input" type="checkbox" name="twoFaEnabled" value="true"
                                       onchange="this.form.submit()" @(Model.TwoFaEnabled ? "checked" : "") />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.Tab == "system")
    {
        <div class="card card-soft">
            <div class="card-body p-4">
                <h5 class="mb-1">System Preferences</h5>
                <div class="muted mb-3">Configure system-wide settings.</div>

                <form method="post" action="@Url.Action("SaveSystem","Home")">
                    @Html.AntiForgeryToken()

                    <div class="form-check form-switch d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <div class="fw-semibold">Maintenance Mode</div>
                            <div class="muted small">Temporarily disable access for non-admin users.</div>
                        </div>
                        <input class="form-check-input" type="checkbox" name="MaintenanceMode" value="true" @(Model.MaintenanceMode ? "checked" : "") />
                    </div>

                    <hr />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Session Timeout (minutes)</label>
                        <select class="form-select" name="SessionTimeout" style="max-width:220px;">
                            <option value="15" selected="@(Model.SessionTimeout == "15")">15 minutes</option>
                            <option value="30" selected="@(Model.SessionTimeout == "30")">30 minutes</option>
                            <option value="60" selected="@(Model.SessionTimeout == "60")">60 minutes</option>
                        </select>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Default Document Format</label>
                        <select class="form-select" name="DocFormat" style="max-width:220px;">
                            <option value="pdf" selected="@(Model.DocFormat == "pdf")">PDF</option>
                            <option value="docx" selected="@(Model.DocFormat == "docx")">DOCX</option>
                        </select>
                    </div>

                    <button class="btn btn-primary btn-soft" type="submit">Save System Settings</button>
                </form>
            </div>
        </div>
    }
</div>
