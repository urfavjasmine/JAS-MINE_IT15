@model JAS_MINE_IT15.Models.MySubscriptionViewModel
@using Microsoft.AspNetCore.Http
@using System.Linq
@{
    ViewData["Title"] = "My Subscription";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var role = Context?.Session?.GetString("Role") ?? "";
    var roleLabel = Context?.Session?.GetString("RoleLabel") ?? "User";
    var userName = Context?.Session?.GetString("UserName") ?? User?.Identity?.Name ?? "User";
    var barangayName = Context?.Session?.GetString("Barangay") ?? "";
}

@functions {
    private string BadgeClass(string s)
    {
        s = (s ?? "").Trim();
        if (s == "Active" || s == "Paid") return "bg-success-subtle text-success border border-success-subtle";
        if (s == "Expired") return "bg-danger-subtle text-danger border border-danger-subtle";
        return "bg-warning-subtle text-warning border border-warning-subtle";
    }

    private string Peso(decimal amount) => "₱" + string.Format("{0:N0}", amount);
}

@{
    var sub = Model?.Subscription;
    var payments = Model?.Payments ?? new List<JAS_MINE_IT15.Models.MySubscriptionViewModel.PaymentRow>();
    var displayBarangay = Model?.BarangayName ?? barangayName ?? "";
}

<div class="d-flex flex-column gap-4">

    <div>
        <h2 class="fw-bold mb-1">My Subscription</h2>
        <div class="text-muted">View your barangay's subscription details and payment history.</div>
    </div>

    <!-- Subscription Card -->
    <div class="card border-primary-subtle">
        <div class="card-header bg-white">
            <div class="fw-bold d-flex align-items-center gap-2">
                <i class="bi bi-credit-card fs-5"></i>
                <span>Current Subscription</span>
            </div>
        </div>

        <div class="card-body">
            @if (sub == null)
            {
                <div class="alert alert-warning mb-0">
                    No active subscription found yet.
                </div>
            }
            else
            {
                <div class="row g-3 align-items-center">
                    <div class="col-12 col-md-8">
                        <div class="mb-2">
                            <div class="fs-3 fw-bold">@sub.PlanName</div>
                            <div class="text-muted">@displayBarangay</div>
                        </div>

                        <div class="d-flex flex-wrap gap-4 small text-muted">
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-calendar3"></i>
                                <span>Start: @sub.StartDate</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-calendar3"></i>
                                <span>End: @sub.EndDate</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4 text-md-end">
                        <span class="badge @BadgeClass(sub.Status) px-3 py-2">
                            @sub.Status
                        </span>

                        <div class="mt-2">
                            <span class="fs-3 fw-bold text-primary">
                                @Peso(sub.Price)
                            </span>
                            <span class="text-muted">/year</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Payment History -->
    <div class="card">
        <div class="card-header bg-white">
            <div class="fw-bold d-flex align-items-center gap-2">
                <i class="bi bi-receipt fs-5"></i>
                <span>Payment History</span>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive border rounded">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Method</th>
                            <th>Status</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!payments.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-muted text-center py-4">
                                    No payments found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var p in payments)
                            {
                                <tr>
                                    <td class="fw-semibold">@Peso(p.Amount)</td>
                                    <td class="text-muted">@p.Date</td>
                                    <td class="text-muted">@p.Method</td>
                                    <td>
                                        <span class="badge @BadgeClass(p.Status)">@p.Status</span>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>