@model JAS_MINE_IT15.Models.UserManagementViewModel
@using System.Globalization

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string RoleBadgeClass(string roleKey)
    {
        return roleKey switch
        {
            "super_admin" => "badge bg-danger",
            "barangay_admin" => "badge bg-primary",
            "barangay_secretary" => "badge bg-secondary",
            "barangay_staff" => "badge bg-light text-dark border",
            _ => "badge bg-light text-dark border"
        };
    }

    string StatusBadgeClass(string status)
    {
        return status == "active"
            ? "badge rounded-pill bg-success bg-opacity-10 text-success border border-success-subtle"
            : "badge rounded-pill bg-secondary bg-opacity-10 text-secondary border border-secondary-subtle";
    }

    string Initials(string fullName)
    {
        var parts = (fullName ?? "").Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 0) return "U";
        if (parts.Length == 1) return parts[0].Substring(0, 1).ToUpperInvariant();
        return (parts[0].Substring(0, 1) + parts[^1].Substring(0, 1)).ToUpperInvariant();
    }
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .page-wrap {
        padding: 18px;
    }

    .stat-card {
        border-radius: 12px;
    }

    .table-wrap {
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        overflow: hidden;
    }

    .avatar {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(13,110,253,.10);
        color: #0d6efd;
        font-size: 12px;
        font-weight: 700;
    }

    .muted {
        color: #6b7280;
    }

    .kebab {
        width: 38px;
        height: 38px;
        border-radius: 10px;
    }
</style>

<div class="page-wrap">

    <!-- Page title + Add User -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h3 class="mb-0">User Management</h3>
            <div class="muted">Manage users and their roles across barangays.</div>
        </div>
        <button class="btn btn-primary d-flex align-items-center gap-2"
                data-bs-toggle="modal"
                data-bs-target="#createEditModal"
                onclick="openCreate()">
            <span style="font-weight:900;">+</span>
            Add User
        </button>
    </div>

    <!-- Stat cards -->
    <div class="row g-3 mb-4">

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-primary">@Model.TotalUsers</div>
                    <div class="small muted">Total Users</div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-success">@Model.ActiveUsers</div>
                    <div class="small muted">Active</div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-warning">@Model.InactiveUsers</div>
                    <div class="small muted">Inactive</div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-info">@Model.BarangayCount</div>
                    <div class="small muted">Barangays</div>
                </div>
            </div>
        </div>

    </div>

    <!-- Users table -->
    <div class="card">
        <div class="card-body">

            <div class="fw-semibold mb-2">Users</div>

            <!-- ONLY User Search + Role filter -->
            <div class="d-flex gap-2 mb-3">

                <input id="searchInput"
                       class="form-control"
                       placeholder="Search users..."
                       oninput="applyFilter()" />

                <select id="roleFilter"
                        class="form-select"
                        style="max-width:220px;"
                        onchange="applyFilter()">

                    <option value="all">All Roles</option>

                    @foreach (var role in Model.RoleLabels)
                    {
                        <option value="@role.Key">@role.Value</option>
                    }

                </select>

            </div>

            <div class="table-wrap">

                <table class="table table-hover mb-0" id="usersTable">

                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Role</th>
                            <th class="d-none d-md-table-cell">Barangay</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var u in Model.Users)
                        {
                            var roleKey = u.Role.ToString();

                            <tr data-name="@u.Name.ToLowerInvariant()"
                                data-email="@u.Email.ToLowerInvariant()"
                                data-role="@roleKey">

                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar">@Initials(u.Name)</div>
                                        <div>
                                            <div class="fw-semibold">@u.Name</div>
                                            <div class="small muted">@u.Email</div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <span class="@RoleBadgeClass(roleKey)">
                                        @Model.RoleLabels[roleKey]
                                    </span>
                                </td>

                                <td class="d-none d-md-table-cell muted">
                                    @u.Barangay
                                </td>

                                <td>
                                    <span class="@StatusBadgeClass(u.Status)">
                                        @u.Status
                                    </span>
                                </td>

                                <td class="text-end">
                                    <div class="dropdown">

                                        <button class="btn btn-light kebab dropdown-toggle"
                                                data-bs-toggle="dropdown">
                                            ⋯
                                        </button>

                                        <ul class="dropdown-menu dropdown-menu-end">

                                            <li>
                                                <button class="dropdown-item"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#viewModal"
                                                        onclick="openView('@u.Id','@u.Name','@u.Email','@roleKey','@u.Status','@u.Barangay')">
                                                    View
                                                </button>
                                            </li>

                                            <li>
                                                <button class="dropdown-item"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#createEditModal"
                                                        onclick="openEdit('@u.Id','@u.Name','@u.Email','@roleKey','@u.Barangay')">
                                                    Edit
                                                </button>
                                            </li>

                                        </ul>

                                    </div>
                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

        </div>
    </div>

</div>

<!-- View Modal -->
<div class="modal fade" id="viewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label text-muted small">Full Name</label>
                    <div id="vName" class="fw-semibold"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted small">Email</label>
                    <div id="vEmail"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted small">Role</label>
                    <div id="vRole"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted small">Barangay</label>
                    <div id="vBarangay"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted small">Status</label>
                    <div id="vStatus"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="userForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="fId" />
                    <div class="mb-3">
                        <label class="form-label">Full Name *</label>
                        <input type="text" name="name" id="fName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email Address *</label>
                        <input type="email" name="email" id="fEmail" class="form-control" required />
                    </div>
                    <div class="mb-3" id="passwordGroup">
                        <label class="form-label">Password *</label>
                        <input type="password" name="password" id="fPassword" class="form-control" />
                        <small class="text-muted">Leave blank to keep existing password (Edit mode)</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role *</label>
                        <select name="role" id="fRole" class="form-select" required>
                            @foreach (var role in Model.RoleLabels)
                            {
                                <option value="@role.Key">@role.Value</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Barangay</label>
                        <select name="barangay" id="fBarangay" class="form-select">
                            <option value="">-- Select Barangay --</option>
                            @foreach (var b in Model.Barangays)
                            {
                                <option value="@b">@b</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="submitBtn">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    function openCreate() {
        document.getElementById('modalTitle').textContent = 'Add User';
        document.getElementById('userForm').action = '@Url.Action("CreateUser", "Home")';
        document.getElementById('fId').value = '';
        document.getElementById('fName').value = '';
        document.getElementById('fEmail').value = '';
        document.getElementById('fPassword').value = '';
        document.getElementById('fPassword').required = true;
        document.getElementById('fRole').value = 'barangay_staff';
        document.getElementById('fBarangay').value = '';
    }

    function openEdit(id, name, email, role, barangay) {
        document.getElementById('modalTitle').textContent = 'Edit User';
        document.getElementById('userForm').action = '@Url.Action("EditUser", "Home")';
        document.getElementById('fId').value = id;
        document.getElementById('fName').value = name;
        document.getElementById('fEmail').value = email;
        document.getElementById('fPassword').value = '';
        document.getElementById('fPassword').required = false;
        document.getElementById('fRole').value = role;
        document.getElementById('fBarangay').value = barangay || '';
    }

    function openView(id, name, email, role, status, barangay) {
        document.getElementById('vName').textContent = name;
        document.getElementById('vEmail').textContent = email;
        document.getElementById('vRole').textContent = '@Model.RoleLabels'.includes(role) ? role : role;
        document.getElementById('vStatus').textContent = status;
        document.getElementById('vBarangay').textContent = barangay || 'N/A';
    }

    function applyFilter() {

        const q = document.getElementById('searchInput').value.toLowerCase();
        const role = document.getElementById('roleFilter').value;

        document.querySelectorAll('#usersTable tbody tr')
        .forEach(r => {

            const name = r.dataset.name;
            const email = r.dataset.email;
            const rrole = r.dataset.role;

            const show =
                (name.includes(q) || email.includes(q)) &&
                (role === 'all' || role === rrole);

            r.style.display = show ? '' : 'none';

        });

    }

</script>
