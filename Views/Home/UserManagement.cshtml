@model JAS_MINE_IT15.Models.UserManagementViewModel
@using System.Globalization

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Header display (same as your dashboard style)
    var userName = Context.Session.GetString("UserName") ?? "Jasminetampus30";
    var barangay = Context.Session.GetString("Barangay") ?? "Barangay San Antonio";

    string RoleBadgeClass(string roleKey)
    {
        return roleKey switch
        {
            "super_admin" => "badge bg-danger",
            "barangay_admin" => "badge bg-primary",
            "barangay_secretary" => "badge bg-secondary",
            "barangay_staff" => "badge bg-light text-dark border",
            _ => "badge bg-light text-dark border"
        };
    }

    string StatusBadgeClass(string status)
    {
        return status == "active"
            ? "badge rounded-pill bg-success bg-opacity-10 text-success border border-success-subtle"
            : "badge rounded-pill bg-secondary bg-opacity-10 text-secondary border border-secondary-subtle";
    }

    string Initials(string fullName)
    {
        var parts = (fullName ?? "").Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 0) return "U";
        if (parts.Length == 1) return parts[0].Substring(0, 1).ToUpperInvariant();
        return (parts[0].Substring(0, 1) + parts[^1].Substring(0, 1)).ToUpperInvariant();
    }
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .page-wrap {
        padding: 18px;
    }

    .stat-card {
        border-radius: 12px;
    }

    .table-wrap {
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        overflow: hidden;
    }

    .avatar {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(13,110,253,.10);
        color: #0d6efd;
        font-size: 12px;
        font-weight: 700;
    }

    .muted {
        color: #6b7280;
    }

    .kebab {
        width: 38px;
        height: 38px;
        border-radius: 10px;
    }
</style>

<div class="page-wrap">

    <!-- Top header like your screenshot -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <div class="fw-semibold">Welcome, @userName</div>
            <div class="small muted">@barangay</div>
        </div>

        <!-- Search bar (top right in your screenshot) -->
        <div class="d-flex gap-2 align-items-center" style="min-width: 420px; max-width: 520px;">
            <input class="form-control" placeholder="Search documents, policies, lessons..." />
            <button class="btn btn-outline-secondary position-relative" type="button" title="Notifications">
                <span class="bi bi-bell"></span>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success">2</span>
            </button>
        </div>
    </div>

    <!-- Page title + Add User -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h3 class="mb-0">User Management</h3>
            <div class="muted">Manage users and their roles across barangays.</div>
        </div>
        <button class="btn btn-primary d-flex align-items-center gap-2" type="button"
                data-bs-toggle="modal" data-bs-target="#createEditModal"
                onclick="openCreate()">
            <span style="font-weight:900;">+</span>
            Add User
        </button>
    </div>

    <!-- Stat cards -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-primary">@Model.TotalUsers</div>
                    <div class="small muted">Total Users</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-success">@Model.ActiveUsers</div>
                    <div class="small muted">Active</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-warning">@Model.InactiveUsers</div>
                    <div class="small muted">Inactive</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-info">@Model.BarangayCount</div>
                    <div class="small muted">Barangays</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users card -->
    <div class="card">
        <div class="card-body">
            <div class="fw-semibold mb-2">Users</div>

            <!-- Search + Role filter -->
            <div class="d-flex flex-column flex-md-row gap-2 mb-3">
                <div class="flex-grow-1 position-relative">
                    <input id="searchInput" class="form-control ps-3" placeholder="Search users..." oninput="applyFilter()" />
                </div>
                <select id="roleFilter" class="form-select" style="max-width: 220px;" onchange="applyFilter()">
                    <option value="all">All Roles</option>
                    @foreach (var role in Model.RoleLabels)
                    {
                        <option value="@role.Key">@role.Value</option>
                    }
                </select>
            </div>

            <div class="table-wrap">
                <table class="table table-hover mb-0" id="usersTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width:45%;">User</th>
                            <th style="width:20%;">Role</th>
                            <th class="d-none d-md-table-cell" style="width:20%;">Barangay</th>
                            <th style="width:10%;">Status</th>
                            <th style="width:5%;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model.Users)
                        {
                            var roleKey = u.Role.ToString();
                            <tr data-name="@u.Name.ToLowerInvariant()"
                                data-email="@u.Email.ToLowerInvariant()"
                                data-role="@roleKey">
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar">@Initials(u.Name)</div>
                                        <div>
                                            <div class="fw-semibold">@u.Name</div>
                                            <div class="small muted">@u.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="@RoleBadgeClass(roleKey)">@Model.RoleLabels[roleKey]</span>
                                </td>
                                <td class="d-none d-md-table-cell muted">@u.Barangay</td>
                                <td>
                                    <span class="@StatusBadgeClass(u.Status)">@u.Status</span>
                                </td>
                                <td class="text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-light kebab dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            ⋯
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <button class="dropdown-item" type="button"
                                                        data-bs-toggle="modal" data-bs-target="#viewModal"
                                                        onclick="openView('@u.Id','@Html.Raw(u.Name.Replace("'", "\\'"))','@u.Email','@roleKey','@u.Status','@Html.Raw(u.Barangay.Replace("'", "\\'"))')">
                                                    View
                                                </button>
                                            </li>
                                            <li>
                                                <button class="dropdown-item" type="button"
                                                        data-bs-toggle="modal" data-bs-target="#createEditModal"
                                                        onclick="openEdit('@u.Id','@Html.Raw(u.Name.Replace("'", "\\'"))','@u.Email','@roleKey','@Html.Raw(u.Barangay.Replace("'", "\\'"))')">
                                                    Edit
                                                </button>
                                            </li>
                                            <li>
                                                <form method="post" action="@Url.Action("ToggleStatus","Admin")" class="m-0">
                                                    <input type="hidden" name="id" value="@u.Id" />
                                                    <button class="dropdown-item" type="submit">
                                                        @(u.Status == "active" ? "Deactivate" : "Activate")
                                                    </button>
                                                </form>
                                            </li>
                                            <li><hr class="dropdown-divider" /></li>
                                            <li>
                                                <button class="dropdown-item text-danger" type="button"
                                                        data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                        onclick="openDelete('@u.Id','@Html.Raw(u.Name.Replace("'", "\\'"))')">
                                                    Delete
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="createEditForm" method="post" action="@Url.Action("CreateUser","Admin")">
                <div class="modal-header">
                    <h5 class="modal-title" id="createEditTitle">Add New User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="formId" name="id" />

                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input class="form-control" id="formName" name="name" placeholder="Enter full name" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input class="form-control" id="formEmail" name="email" type="email" placeholder="Enter email" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select class="form-select" id="formRole" name="role">
                            @foreach (var role in Model.RoleLabels)
                            {
                                <option value="@role.Key">@role.Value</option>
                            }
                        </select>
                    </div>

                    <div class="mb-1">
                        <label class="form-label">Barangay</label>
                        <input class="form-control" id="formBarangay" name="barangay" placeholder="Enter barangay" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary" id="saveBtn" type="submit">Create User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Modal -->
<div class="modal fade" id="viewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="avatar" id="viewAvatar">U</div>
                    <div>
                        <div class="fw-semibold" id="viewName">-</div>
                        <div class="small muted" id="viewEmail">-</div>
                    </div>
                </div>

                <div class="row g-2 small">
                    <div class="col-6"><span class="muted">Role:</span> <span id="viewRole">-</span></div>
                    <div class="col-6"><span class="muted">Status:</span> <span id="viewStatus">-</span></div>
                    <div class="col-12"><span class="muted">Barangay:</span> <span id="viewBarangay">-</span></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" action="@Url.Action("DeleteUser", "Admin")">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">Delete User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="deleteId" name="id" />
                    Are you sure you want to delete "<span class="fw-semibold" id="deleteName"></span>"?
                    <div class="small muted mt-1">This action cannot be undone.</div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-danger" type="submit">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function applyFilter() {
        const q = (document.getElementById('searchInput').value || '').toLowerCase().trim();
        const role = document.getElementById('roleFilter').value;

        const rows = document.querySelectorAll('#usersTable tbody tr');
        rows.forEach(r => {
            const name = r.getAttribute('data-name') || '';
            const email = r.getAttribute('data-email') || '';
            const rrole = r.getAttribute('data-role') || '';

            const matchesSearch = !q || name.includes(q) || email.includes(q);
            const matchesRole = (role === 'all') || (rrole === role);

            r.style.display = (matchesSearch && matchesRole) ? '' : 'none';
        });
    }

    function openCreate() {
        document.getElementById('createEditTitle').innerText = 'Add New User';
        document.getElementById('saveBtn').innerText = 'Create User';

        const form = document.getElementById('createEditForm');
        form.action = '@Url.Action("CreateUser", "Admin")';

        document.getElementById('formId').value = '';
        document.getElementById('formName').value = '';
        document.getElementById('formEmail').value = '';
        document.getElementById('formRole').value = 'barangay_staff';
        document.getElementById('formBarangay').value = '';
    }

    function openEdit(id, name, email, role, barangay) {
        document.getElementById('createEditTitle').innerText = 'Edit User';
        document.getElementById('saveBtn').innerText = 'Save Changes';

        const form = document.getElementById('createEditForm');
        form.action = '@Url.Action("EditUser", "Admin")';

        document.getElementById('formId').value = id;
        document.getElementById('formName').value = name;
        document.getElementById('formEmail').value = email;
        document.getElementById('formRole').value = role;
        document.getElementById('formBarangay').value = barangay;
    }

    function openView(id, name, email, role, status, barangay) {
        const initials = name.split(' ').filter(Boolean).map(x => x[0]).slice(0,2).join('').toUpperCase();
        document.getElementById('viewAvatar').innerText = initials || 'U';
        document.getElementById('viewName').innerText = name;
        document.getElementById('viewEmail').innerText = email;

        // Role label from server list (fallback = role key)
        const roleMap = {
            @foreach (var kv in Model.RoleLabels)
            {
                    @: "@kv.Key" "@kv.Value",
            }
        };

        document.getElementById('viewRole').innerText = roleMap[role] || role;
        document.getElementById('viewStatus').innerText = status;
        document.getElementById('viewBarangay').innerText = barangay;
    }

    function openDelete(id, name) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteName').innerText = name;
    }
</script>
