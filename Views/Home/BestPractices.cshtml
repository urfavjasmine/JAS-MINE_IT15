@model JAS_MINE_IT15.Models.BestPracticesViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Best Practices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ===== Page header ===== */
    .page-title {
        font-size: 28px;
        font-weight: 800;
        color: #0f2747;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .page-subtitle {
        color: #6c7a89;
        margin-top: 4px;
    }

    /* ===== Cards ===== */
    .soft-card {
        background: #fff;
        border: 1px solid #e6edf5;
        border-radius: 12px;
        box-shadow: 0 4px 14px rgba(16, 24, 40, .06);
    }

    .featured-banner {
        background: #eef8f0;
        border: 1px solid rgba(30, 122, 58, .25);
    }

    .input-soft, .select-soft {
        height: 46px;
        border-radius: 10px;
        border: 1px solid #d9e3ef;
    }

        .input-soft:focus, .select-soft:focus {
            box-shadow: none;
            border-color: #9bb7d6;
        }

    .input-icon-left {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #72839a;
        font-size: 16px;
        pointer-events: none;
    }

    .input-with-icon {
        padding-left: 42px;
    }

    .btn-outline-soft {
        height: 44px;
        border-radius: 10px;
        font-weight: 600;
        border: 1px solid #d9e3ef;
        background: #fff;
    }

    .btn-primary-custom {
        background: #163a5f;
        border-color: #163a5f;
        border-radius: 10px;
        height: 42px;
        font-weight: 700;
        color: #fff;
    }

        .btn-primary-custom:hover {
            background: #102d49;
            border-color: #102d49;
            color: #fff;
        }

    .cat-badge {
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 700;
        font-size: 12px;
        display: inline-block;
        line-height: 1;
    }

    .cat-health {
        background: rgba(25,135,84,.14);
        color: #1e7a3a;
    }

    .cat-education {
        background: rgba(13,202,240,.14);
        color: #0b7285;
    }

    .cat-governance {
        background: rgba(13,110,253,.14);
        color: #0b3aa8;
    }

    .cat-environment {
        background: rgba(25,135,84,.10);
        color: #1e7a3a;
    }

    .cat-safety {
        background: rgba(255,193,7,.18);
        color: #b76a00;
    }

    .cat-finance {
        background: rgba(111,66,193,.14);
        color: #5a32a3;
    }

    .cat-default {
        background: #eef2f6;
        color: #5a6b7f;
    }

    .practice-card {
        border-radius: 12px;
        border: 1px solid #e6edf5;
        box-shadow: 0 4px 14px rgba(16, 24, 40, .06);
        height: 100%;
    }

    .practice-title {
        font-weight: 800;
        color: #1f2d3d;
        font-size: 16px;
        margin-top: 10px;
    }

    .text-muted-sm {
        color: #6c7a89;
        font-size: 13px;
    }

    .meta-row {
        color: #6c7a89;
        font-size: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .divider-top {
        border-top: 1px solid #eef3f8;
        padding-top: 12px;
        margin-top: 10px;
    }

    .star-featured {
        color: #f59f00;
    }

    /* small dropdown button */
    .btn-kebab {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        border: 0;
        background: transparent;
    }

        .btn-kebab:hover {
            background: #f2f6fb;
        }
</style>

@{
    string CategoryClass(string cat) => cat switch
    {
        "Health" => "cat-badge cat-health",
        "Education" => "cat-badge cat-education",
        "Governance" => "cat-badge cat-governance",
        "Environment" => "cat-badge cat-environment",
        "Safety" => "cat-badge cat-safety",
        "Finance" => "cat-badge cat-finance",
        _ => "cat-badge cat-default"
    };

    var featured = Model.FeaturedPractice;
}

<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex flex-column flex-md-row align-items-md-start justify-content-between gap-3 mb-4">
        <div>
            <div class="page-title">
                <i class="bi bi-award"></i>
                Best Practices Database
            </div>
            <div class="page-subtitle">Discover and learn from proven solutions across barangays</div>
        </div>

        <div class="d-flex gap-2">
            @if (Model.CanManage)
            {
                <button class="btn btn-primary-custom px-4" data-bs-toggle="modal" data-bs-target="#bpCreateModal">
                    <i class="bi bi-plus-lg me-2"></i>Add Practice
                </button>
            }
            <button class="btn btn-outline-soft px-4">
                <i class="bi bi-download me-2"></i>
                Export to PDF
            </button>
        </div>
    </div>

    <!-- Featured Banner -->
    @if (featured != null)
    {
        <div class="soft-card featured-banner mb-4">
            <div class="p-4 p-md-5">
                <div class="d-flex align-items-center gap-2 mb-2">
                    <i class="bi bi-star-fill star-featured"></i>
                    <span class="fw-bold">Featured Practice</span>
                </div>

                <h3 class="fw-bold mb-2" style="color:#1f2d3d;">@featured.Title</h3>
                <p class="text-muted mb-3" style="max-width: 920px;">@featured.Description</p>

                <button class="btn btn-primary-custom px-4"
                        data-bs-toggle="modal"
                        data-bs-target="#bpViewModal"
                        data-id="@featured.Id"
                        data-title="@featured.Title"
                        data-category="@featured.Category"
                        data-desc="@featured.Description"
                        data-barangay="@featured.Barangay"
                        data-date="@featured.DateAdded"
                        data-rating="@featured.Rating"
                        data-impl="@featured.Implementations"
                        data-featured="@featured.Featured">
                    Learn More <i class="bi bi-box-arrow-up-right ms-2"></i>
                </button>
            </div>
        </div>
    }

    <!-- Filters -->
    <form method="get" asp-action="BestPractices">
        <div class="soft-card mb-4">
            <div class="p-3 p-md-4">
                <div class="row g-3 align-items-center">
                    <div class="col-12 col-lg-8 position-relative">
                        <i class="bi bi-search input-icon-left"></i>
                        <input name="q"
                               value="@Model.SearchQuery"
                               class="form-control input-soft input-with-icon"
                               placeholder="Search best practices..." />
                    </div>

                    <div class="col-12 col-lg-4">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"
                                  style="border-radius:10px 0 0 10px; border:1px solid #d9e3ef; height:46px;">
                                <i class="bi bi-funnel"></i>
                            </span>
                            <select name="status" class="form-select select-soft border-start-0" style="border-radius:0 10px 10px 0;" onchange="this.form.submit()">
                                <option value="" selected="@(string.IsNullOrEmpty(Model.SelectedStatus))">All Status</option>
                                <option value="Active" selected="@(Model.SelectedStatus == "Active")">Active</option>
                                <option value="Archived" selected="@(Model.SelectedStatus == "Archived")">Archived</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Practices Grid -->
    <div class="row g-4">
        @foreach (var p in Model.Practices)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card practice-card">
                    <div class="card-body p-4 d-flex flex-column">

                        <div class="d-flex align-items-start justify-content-between gap-2">
                            <span class="@CategoryClass(p.Category)">@p.Category</span>

                            <div class="d-flex align-items-center gap-2">
                                @if (p.Featured)
                                {
                                    <i class="bi bi-star-fill star-featured"></i>
                                }

                                <div class="dropdown">
                                    <button class="btn-kebab" data-bs-toggle="dropdown" type="button">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>

                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                        <li>
                                            <button type="button" class="dropdown-item"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#bpViewModal"
                                                    data-id="@p.Id"
                                                    data-title="@p.Title"
                                                    data-category="@p.Category"
                                                    data-desc="@p.Description"
                                                    data-barangay="@p.Barangay"
                                                    data-date="@p.DateAdded"
                                                    data-rating="@p.Rating"
                                                    data-impl="@p.Implementations"
                                                    data-featured="@p.Featured">
                                                <i class="bi bi-eye me-2"></i>View
                                            </button>
                                        </li>

                                        @if (Model.CanManage)
                                        {
                                            <li>
                                                <button type="button" class="dropdown-item"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#bpEditModal"
                                                        data-id="@p.Id"
                                                        data-title="@p.Title"
                                                        data-category="@p.Category"
                                                        data-desc="@p.Description"
                                                        data-barangay="@p.Barangay">
                                                    <i class="bi bi-pencil me-2"></i>Edit
                                                </button>
                                            </li>
                                            <li><hr class="dropdown-divider" /></li>
                                            <li>
                                                <button type="button" class="dropdown-item text-warning"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#bpArchiveModal"
                                                        data-id="@p.Id"
                                                        data-title="@p.Title">
                                                    <i class="bi bi-archive me-2"></i>Archive
                                                </button>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="practice-title">@p.Title</div>

                        <p class="text-muted-sm mt-2 mb-3" style="min-height: 54px;">
                            @p.Description
                        </p>

                        <div class="mt-auto">
                            <div class="meta-row mb-2">
                                <i class="bi bi-building"></i>
                                <span>@p.Barangay</span>
                            </div>

                            <div class="meta-row">
                                <i class="bi bi-calendar3"></i>
                                <span>@p.DateAdded</span>
                            </div>

                            <div class="divider-top d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="bi bi-star-fill star-featured"></i>
                                    <span class="fw-bold">@p.Rating</span>
                                </div>
                                <span class="text-muted-sm">@p.Implementations implementations</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>

</div>

<!-- =========================
     CREATE MODAL
========================= -->
@if (Model.CanManage)
{
    <div class="modal fade" id="bpCreateModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content" style="border-radius:12px;">
                <form method="post" asp-action="CreatePractice">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">Add Best Practice</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                            <input name="title" class="form-control input-soft" placeholder="Practice title" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Purpose</label>
                            <textarea name="purpose" class="form-control" rows="2" placeholder="What is the purpose of this practice?"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Steps <span class="text-danger">*</span></label>
                            <textarea name="steps" class="form-control" rows="4" placeholder="Describe the steps to implement this practice..." required></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Resources Needed</label>
                                <textarea name="resourcesNeeded" class="form-control" rows="2" placeholder="List required resources..."></textarea>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Owner Office</label>
                                <input name="ownerOffice" class="form-control input-soft" placeholder="Responsible office" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Category</label>
                            <select name="category" class="form-select select-soft">
                                @foreach (var c in Model.Categories.Where(x => x != "All Categories"))
                                {
                                    <option value="@c">@c</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-soft px-4" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary-custom px-4">Add Practice</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- =========================
     EDIT MODAL
========================= -->
@if (Model.CanManage)
{
    <div class="modal fade" id="bpEditModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content" style="border-radius:12px;">
                <form method="post" asp-action="EditPractice">
                    @Html.AntiForgeryToken()

                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">Edit Best Practice</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <input type="hidden" name="id" id="bpEditId" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                            <input name="title" id="bpEditTitle" class="form-control input-soft" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Purpose</label>
                            <textarea name="purpose" id="bpEditPurpose" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Steps <span class="text-danger">*</span></label>
                            <textarea name="steps" id="bpEditSteps" class="form-control" rows="4" required></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Resources Needed</label>
                                <textarea name="resourcesNeeded" id="bpEditResources" class="form-control" rows="2"></textarea>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Owner Office</label>
                                <input name="ownerOffice" id="bpEditOwner" class="form-control input-soft" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Category</label>
                                <select name="category" id="bpEditCategory" class="form-select select-soft">
                                    @foreach (var c in Model.Categories.Where(x => x != "All Categories"))
                                    {
                                        <option value="@c">@c</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Status</label>
                                <select name="status" id="bpEditStatus" class="form-select select-soft">
                                    <option value="Active">Active</option>
                                    <option value="Archived">Archived</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-soft px-4" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary-custom px-4">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- =========================
     VIEW MODAL
========================= -->
<div class="modal fade" id="bpViewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius:12px;">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="bpViewTitle">Practice Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="mb-2">
                    <span class="cat-badge cat-default" id="bpViewCat">Category</span>
                </div>

                <p class="text-muted" id="bpViewDesc"></p>

                <div class="row g-2 text-sm">
                    <div class="col-6"><span class="text-muted">Barangay:</span> <span id="bpViewBarangay"></span></div>
                    <div class="col-6"><span class="text-muted">Date:</span> <span id="bpViewDate"></span></div>
                    <div class="col-6"><span class="text-muted">Rating:</span> <span id="bpViewRating"></span></div>
                    <div class="col-6"><span class="text-muted">Implementations:</span> <span id="bpViewImpl"></span></div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-soft px-4" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- =========================
     ARCHIVE MODAL
========================= -->
@if (Model.CanManage)
{
    <div class="modal fade" id="bpArchiveModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius:12px;">
                <form method="post" asp-action="ArchivePractice">
                    @Html.AntiForgeryToken()

                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">Archive Practice</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <input type="hidden" name="id" id="bpArchiveId" />
                        Are you sure you want to archive "<span class="fw-bold" id="bpArchiveTitle"></span>"?
                        <input type="hidden" name="q" value="@Model.SearchQuery" />
                        <input type="hidden" name="cat" value="@Model.SelectedCategory" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-soft px-4" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-warning px-4">Archive</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Populate VIEW modal
        const bpViewModal = document.getElementById('bpViewModal');
        if (bpViewModal) {
            bpViewModal.addEventListener('show.bs.modal', function (event) {
                const btn = event.relatedTarget;
                if (!btn) return;

                document.getElementById('bpViewTitle').textContent = btn.getAttribute('data-title') || 'Practice Details';
                document.getElementById('bpViewDesc').textContent = btn.getAttribute('data-desc') || '';
                document.getElementById('bpViewBarangay').textContent = btn.getAttribute('data-barangay') || '';
                document.getElementById('bpViewDate').textContent = btn.getAttribute('data-date') || '';
                document.getElementById('bpViewRating').textContent = btn.getAttribute('data-rating') || '0';
                document.getElementById('bpViewImpl').textContent = btn.getAttribute('data-impl') || '0';

                const cat = btn.getAttribute('data-category') || '';
                const badge = document.getElementById('bpViewCat');
                badge.textContent = cat || 'Category';
                badge.className = 'cat-badge ' + (cat === 'Health' ? 'cat-health'
                    : cat === 'Education' ? 'cat-education'
                    : cat === 'Governance' ? 'cat-governance'
                    : cat === 'Environment' ? 'cat-environment'
                    : cat === 'Safety' ? 'cat-safety'
                    : cat === 'Finance' ? 'cat-finance'
                    : 'cat-default');
            });
        }

        // Populate EDIT modal
        const bpEditModal = document.getElementById('bpEditModal');
        if (bpEditModal) {
            bpEditModal.addEventListener('show.bs.modal', function (event) {
                const btn = event.relatedTarget;
                if (!btn) return;

                document.getElementById('bpEditId').value = btn.getAttribute('data-id') || '';
                document.getElementById('bpEditTitle').value = btn.getAttribute('data-title') || '';
                document.getElementById('bpEditDesc').value = btn.getAttribute('data-desc') || '';
                document.getElementById('bpEditBarangay').value = btn.getAttribute('data-barangay') || '';

                const cat = btn.getAttribute('data-category') || '';
                document.getElementById('bpEditCategory').value = cat;
            });
        }

        // Populate ARCHIVE modal
        const bpArchiveModal = document.getElementById('bpArchiveModal');
        if (bpArchiveModal) {
            bpArchiveModal.addEventListener('show.bs.modal', function (event) {
                const btn = event.relatedTarget;
                if (!btn) return;

                document.getElementById('bpArchiveId').value = btn.getAttribute('data-id') || '';
                document.getElementById('bpArchiveTitle').textContent = btn.getAttribute('data-title') || '';
            });
        }
    </script>
}
