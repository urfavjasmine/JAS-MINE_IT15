@model JAS_MINE_IT15.Models.KnowledgeDiscussionsViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Knowledge Discussions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .page-wrap { padding: 18px; }
    .stat-card { border-radius: 12px; }
    .discussion-card { border-radius: 12px; border: 1px solid #e5e7eb; margin-bottom: 12px; }
    .avatar { width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center; background: rgba(13,110,253,.10); color: #0d6efd; font-size: 14px; font-weight: 700; }
    .muted { color: #6b7280; }
    .category-badge { font-size: 11px; padding: 4px 10px; border-radius: 20px; }
    .content-preview { max-height: 60px; overflow: hidden; text-overflow: ellipsis; }
</style>

<div class="page-wrap">

    <!-- Page title + New Discussion -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h3 class="mb-0">Knowledge Discussions</h3>
            <div class="muted">Share ideas, ask questions, and collaborate with your community.</div>
        </div>
        @if (Model.CanCreate)
        {
            <button class="btn btn-primary d-flex align-items-center gap-2"
                    data-bs-toggle="modal"
                    data-bs-target="#createEditModal"
                    onclick="openCreate()">
                <span style="font-weight:900;">+</span>
                New Discussion
            </button>
        }
    </div>

    <!-- Stat cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-primary">@Model.TotalDiscussions</div>
                    <div class="small muted">Discussions</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-danger">@Model.TotalLikes</div>
                    <div class="small muted">Total Likes</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-success">@Model.TotalReplies</div>
                    <div class="small muted">Total Replies</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="d-flex gap-2 flex-wrap">
                <input name="q" class="form-control" style="max-width: 300px;" placeholder="Search discussions..." value="@Model.SearchQuery" />
                <select name="category" class="form-select" style="max-width: 200px;">
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat" selected="@(Model.CategoryFilter == cat)">@cat</option>
                    }
                </select>
                <button type="submit" class="btn btn-outline-primary">Filter</button>
            </form>
        </div>
    </div>

    <!-- Discussions list -->
    @foreach (var d in Model.Discussions)
    {
        <div class="card discussion-card">
            <div class="card-body">
                <div class="d-flex gap-3">
                    <div class="avatar">@d.AuthorName.Substring(0, 1).ToUpper()</div>
                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h6 class="mb-0 fw-semibold">@d.Title</h6>
                                <div class="small muted">
                                    by @d.AuthorName · @d.CreatedAt.ToString("MMM dd, yyyy")
                                    @if (!string.IsNullOrEmpty(d.Category))
                                    {
                                        <span class="badge bg-light text-dark border ms-2">@d.Category</span>
                                    }
                                </div>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-light dropdown-toggle" data-bs-toggle="dropdown">⋯</button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#viewModal"
                                                onclick="openView('@d.Id','@Html.Raw(d.Title.Replace("'", "\\'"))','@Html.Raw(d.Content.Replace("'", "\\'").Replace("\n", "\\n"))','@d.Category','@d.AuthorName','@d.LikesCount','@d.RepliesCount','@d.CreatedAt.ToString("yyyy-MM-dd")')">
                                            View
                                        </button>
                                    </li>
                                    @if (Model.CanEdit)
                                    {
                                        <li>
                                            <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#createEditModal"
                                                    onclick="openEdit('@d.Id','@Html.Raw(d.Title.Replace("'", "\\'"))','@Html.Raw(d.Content.Replace("'", "\\'").Replace("\n", "\\n"))','@d.Category')">
                                                Edit
                                            </button>
                                        </li>
                                    }
                                    @if (Model.CanArchive)
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <form method="post" asp-action="ArchiveDiscussion" asp-route-id="@d.Id" asp-route-q="@Model.SearchQuery" asp-route-categoryFilter="@Model.CategoryFilter">
                                                <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Archive this discussion?')">Archive</button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="content-preview text-muted">@d.Content</div>
                        <div class="d-flex gap-3 mt-3">
                            <form method="post" asp-action="LikeDiscussion" asp-route-id="@d.Id" asp-route-q="@Model.SearchQuery" asp-route-categoryFilter="@Model.CategoryFilter" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-heart"></i> @d.LikesCount
                                </button>
                            </form>
                            <span class="btn btn-sm btn-outline-secondary disabled">
                                <i class="bi bi-chat"></i> @d.RepliesCount replies
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (!Model.Discussions.Any())
    {
        <div class="card">
            <div class="card-body text-center text-muted py-5">
                No discussions found. Start a new discussion!
            </div>
        </div>
    }
</div>

<!-- View Modal -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="vTitle">Discussion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <span class="badge bg-light text-dark border" id="vCategory"></span>
                    <span class="text-muted ms-2">by <span id="vAuthor"></span> on <span id="vDate"></span></span>
                </div>
                <div id="vContent" style="white-space: pre-wrap;"></div>
                <hr />
                <div class="d-flex gap-3">
                    <span class="text-danger"><i class="bi bi-heart-fill"></i> <span id="vLikes"></span> likes</span>
                    <span class="text-secondary"><i class="bi bi-chat"></i> <span id="vReplies"></span> replies</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="createEditModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="discussionForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">New Discussion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="fId" />
                    <input type="hidden" name="q" value="@Model.SearchQuery" />
                    <input type="hidden" name="categoryFilter" value="@Model.CategoryFilter" />
                    <div class="mb-3">
                        <label class="form-label">Title *</label>
                        <input type="text" name="title" id="fTitle" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select name="category" id="fCategory" class="form-select">
                            <option value="">Select category...</option>
                            @foreach (var cat in Model.Categories.Where(c => c != "All Categories"))
                            {
                                <option value="@cat">@cat</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content *</label>
                        <textarea name="content" id="fContent" class="form-control" rows="6" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openCreate() {
        document.getElementById('modalTitle').textContent = 'New Discussion';
        document.getElementById('discussionForm').action = '@Url.Action("CreateDiscussion")';
        document.getElementById('fId').value = '';
        document.getElementById('fTitle').value = '';
        document.getElementById('fCategory').value = '';
        document.getElementById('fContent').value = '';
    }

    function openEdit(id, title, content, category) {
        document.getElementById('modalTitle').textContent = 'Edit Discussion';
        document.getElementById('discussionForm').action = '@Url.Action("EditDiscussion")';
        document.getElementById('fId').value = id;
        document.getElementById('fTitle').value = title;
        document.getElementById('fCategory').value = category || '';
        document.getElementById('fContent').value = content;
    }

    function openView(id, title, content, category, author, likes, replies, date) {
        document.getElementById('vTitle').textContent = title;
        document.getElementById('vCategory').textContent = category || 'General';
        document.getElementById('vAuthor').textContent = author;
        document.getElementById('vDate').textContent = date;
        document.getElementById('vContent').textContent = content;
        document.getElementById('vLikes').textContent = likes;
        document.getElementById('vReplies').textContent = replies;
    }
</script>
