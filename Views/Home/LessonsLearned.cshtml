        },
        new {
            Id=3,
            Title="Youth Sports Program Engagement",
            Project="Youth Development",
            Summary="Strategies that worked for engaging at-risk youth through sports programs and mentorship initiatives.",
            SubmittedBy="Juan dela Cruz",
            Date="2024-01-20",
            Status="approved",
            Tags=new[]{"youth","sports","community"},
