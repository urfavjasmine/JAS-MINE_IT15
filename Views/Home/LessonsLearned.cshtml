@model JAS_MINE_IT15.Models.LessonsLearnedViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Lessons Learned";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userName = Context.Session.GetString("UserName") ?? "User";
    var canSubmit = Model?.CanSubmit ?? false;
    var canModify = Model?.CanModify ?? false;
    var canArchive = Model?.CanArchive ?? false;
    var archiveStatus = Model?.ArchiveStatus ?? "active";
    var lessons = Model?.Lessons ?? new List<JAS_MINE_IT15.Models.LessonRow>();
}

<style>
    .page-title { font-size: 28px; font-weight: 800; color: #0f2747; margin: 0; display: flex; align-items: center; gap: 10px; }
    .page-subtitle { color: #6c7a89; margin-top: 4px; }
    .soft-card { background: #fff; border: 1px solid #e6edf5; border-radius: 12px; box-shadow: 0 4px 14px rgba(16,24,40,.06); }
    .btn-primary-custom { background: #163a5f; border-color: #163a5f; border-radius: 10px; height: 42px; font-weight: 700; padding: 0 18px; color: #fff; }
    .btn-primary-custom:hover { background: #102d49; border-color: #102d49; color: #fff; }
    .stat-card { padding: 20px; text-align: center; }
    .stat-value { font-size: 28px; font-weight: 800; color: #163a5f; }
    .stat-label { font-size: 13px; color: #6c7a89; margin-top: 4px; }
    .table-container { padding: 0; }
    .table thead th { background: #f8fafc; font-weight: 700; color: #344054; border-bottom: 2px solid #e6edf5; }
    .table tbody td { vertical-align: middle; }
    .table-responsive { overflow: visible !important; }
    .soft-card.table-container { overflow: visible !important; }
    .dropdown .dropdown-menu { z-index: 1050; }
    .modal .form-label { font-weight: 700; color: #1f2d3d; }
    .modal .form-control, .modal .form-select { border-radius: 10px; border: 1px solid #d9e3ef; }
    .alert { border-radius: 10px; }
</style>

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between gap-3 mb-4">
        <div>
            <div class="page-title"><i class="bi bi-lightbulb" style="color:#f59e0b;"></i> Lessons Learned</div>
            <div class="page-subtitle">Record and share insights from programs and activities</div>
        </div>
        @if (canSubmit)
        {
            <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="bi bi-plus-lg me-2"></i>Submit Lesson
            </button>
        }
    </div>

    @if (!string.IsNullOrEmpty(Model?.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="soft-card stat-card">
                <div class="stat-value">@Model?.TotalLessons</div>
                <div class="stat-label">Active Lessons</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="soft-card stat-card">
                <div class="stat-value">@Model?.RecentLessons</div>
                <div class="stat-label">Recent (30 days)</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="soft-card stat-card">
                <div class="stat-value">@Model?.ArchivedLessons</div>
                <div class="stat-label">Archived</div>
            </div>
        </div>
    </div>

    <!-- Archive Status Tabs -->
    <div class="mb-4">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link @(archiveStatus == "active" ? "active" : "")" asp-action="LessonsLearned" asp-route-archiveStatus="active">
                    <i class="bi bi-check-circle me-1"></i>Active
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(archiveStatus == "archived" ? "active" : "")" asp-action="LessonsLearned" asp-route-archiveStatus="archived">
                    <i class="bi bi-archive me-1"></i>Archived
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(archiveStatus == "all" ? "active" : "")" asp-action="LessonsLearned" asp-route-archiveStatus="all">
                    <i class="bi bi-list me-1"></i>All
                </a>
            </li>
        </ul>
    </div>

    <!-- Filters -->
    <form method="get" asp-action="LessonsLearned" class="soft-card p-3 mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-6">
                <label class="form-label fw-bold">Search by Title/Problem</label>
                <input type="text" name="q" value="@Model?.SearchQuery" class="form-control" placeholder="Search..." />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">Filter by Date</label>
                <select name="dateFilter" class="form-select" onchange="this.form.submit()">
                    @foreach (var d in Model?.AvailableDates ?? new List<string>())
                    {
                        <option value="@d" selected="@(d == Model?.DateFilter)">@d</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary-custom w-100">Filter</button>
            </div>
        </div>
    </form>

    <!-- Table -->
    <div class="soft-card table-container">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Problem</th>
                        <th>Date Recorded</th>
                        <th>Status</th>
                        <th style="width: 100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (lessons.Count == 0)
                    {
                        <tr><td colspan="5" class="text-center text-muted py-4">No lessons found.</td></tr>
                    }
                    else
                    {
                        foreach (var lesson in lessons)
                        {
                            <tr class="@(lesson.IsArchived ? "table-secondary" : "")">
                                <td><strong>@lesson.Title</strong></td>
                                <td>@(lesson.Problem.Length > 80 ? lesson.Problem.Substring(0, 80) + "..." : lesson.Problem)</td>
                                <td>@lesson.Date</td>
                                <td>
                                    @if (lesson.IsArchived)
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-archive me-1"></i>Archived</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Active</span>
                                    }
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="cursor:pointer; position:relative; z-index:10;"><i class="bi bi-three-dots"></i></button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="#" onclick="viewLesson(@lesson.Id, '@lesson.Title.Replace("'", "\\'")','@lesson.Problem.Replace("'", "\\'").Replace("\n", " ")','@lesson.ActionTaken.Replace("'", "\\'").Replace("\n", " ")','@lesson.Result.Replace("'", "\\'").Replace("\n", " ")','@lesson.Recommendation.Replace("'", "\\'").Replace("\n", " ")')"><i class="bi bi-eye me-2"></i>View</a></li>
                                            @if (canModify && !lesson.IsArchived)
                                            {
                                                <li><a class="dropdown-item" href="#" onclick="editLesson(@lesson.Id, '@lesson.Title.Replace("'", "\\'")','@lesson.Problem.Replace("'", "\\'").Replace("\n", " ")','@lesson.ActionTaken.Replace("'", "\\'").Replace("\n", " ")','@lesson.Result.Replace("'", "\\'").Replace("\n", " ")','@lesson.Recommendation.Replace("'", "\\'").Replace("\n", " ")')"><i class="bi bi-pencil me-2"></i>Edit</a></li>
                                            }
                                            @if (canArchive)
                                            {
                                                <li><hr class="dropdown-divider"></li>
                                                @if (lesson.IsArchived)
                                                {
                                                    <li>
                                                        <form asp-action="RestoreLesson" method="post" onsubmit="return confirm('Restore this lesson?');">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@lesson.Id" />
                                                            <button type="submit" class="dropdown-item text-success"><i class="bi bi-arrow-counterclockwise me-2"></i>Restore</button>
                                                        </form>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li>
                                                        <form asp-action="ArchiveLesson" method="post" onsubmit="return confirm('Archive this lesson?');">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@lesson.Id" />
                                                            <button type="submit" class="dropdown-item text-danger"><i class="bi bi-archive me-2"></i>Archive</button>
                                                        </form>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- View Modal -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius:14px;border:0;">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="viewTitle">View Lesson</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3"><label class="form-label">Problem</label><div id="viewProblem" class="border rounded p-3 bg-light"></div></div>
                <div class="mb-3"><label class="form-label">Action Taken</label><div id="viewAction" class="border rounded p-3 bg-light"></div></div>
                <div class="mb-3"><label class="form-label">Result</label><div id="viewResult" class="border rounded p-3 bg-light"></div></div>
                <div class="mb-3"><label class="form-label">Recommendation</label><div id="viewRecommendation" class="border rounded p-3 bg-light"></div></div>
            </div>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius:14px;border:0;">
            <form asp-action="CreateLesson" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Submit Lesson Learned</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3"><label class="form-label">Title <span class="text-danger">*</span></label><input type="text" name="title" class="form-control" required /></div>
                    <div class="mb-3"><label class="form-label">Problem <span class="text-danger">*</span></label><textarea name="problem" class="form-control" rows="3" required></textarea></div>
                    <div class="mb-3"><label class="form-label">Action Taken <span class="text-danger">*</span></label><textarea name="actionTaken" class="form-control" rows="3" required></textarea></div>
                    <div class="mb-3"><label class="form-label">Result <span class="text-danger">*</span></label><textarea name="result" class="form-control" rows="3" required></textarea></div>
                    <div class="mb-3"><label class="form-label">Recommendation</label><textarea name="recommendation" class="form-control" rows="2"></textarea></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius:10px;">Cancel</button>
                    <button type="submit" class="btn btn-primary-custom">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius:14px;border:0;">
            <form asp-action="EditLesson" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="editId" />
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Edit Lesson</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3"><label class="form-label">Title <span class="text-danger">*</span></label><input type="text" name="title" id="editTitle" class="form-control" required /></div>
                    <div class="mb-3"><label class="form-label">Problem <span class="text-danger">*</span></label><textarea name="problem" id="editProblem" class="form-control" rows="3" required></textarea></div>
                    <div class="mb-3"><label class="form-label">Action Taken <span class="text-danger">*</span></label><textarea name="actionTaken" id="editAction" class="form-control" rows="3" required></textarea></div>
                    <div class="mb-3"><label class="form-label">Result <span class="text-danger">*</span></label><textarea name="result" id="editResult" class="form-control" rows="3" required></textarea></div>
                    <div class="mb-3"><label class="form-label">Recommendation</label><textarea name="recommendation" id="editRecommendation" class="form-control" rows="2"></textarea></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius:10px;">Cancel</button>
                    <button type="submit" class="btn btn-primary-custom">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function viewLesson(id, title, problem, action, result, recommendation) {
        document.getElementById('viewTitle').textContent = title;
        document.getElementById('viewProblem').textContent = problem;
        document.getElementById('viewAction').textContent = action;
        document.getElementById('viewResult').textContent = result;
        document.getElementById('viewRecommendation').textContent = recommendation || 'N/A';
        new bootstrap.Modal(document.getElementById('viewModal')).show();
    }
    function editLesson(id, title, problem, action, result, recommendation) {
        document.getElementById('editId').value = id;
        document.getElementById('editTitle').value = title;
        document.getElementById('editProblem').value = problem;
        document.getElementById('editAction').value = action;
        document.getElementById('editResult').value = result;
        document.getElementById('editRecommendation').value = recommendation;
        new bootstrap.Modal(document.getElementById('editModal')).show();
    }

    // Ensure Bootstrap dropdowns are initialized
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('[data-bs-toggle="dropdown"]').forEach(function(btn) {
            if (!bootstrap.Dropdown.getInstance(btn)) {
                new bootstrap.Dropdown(btn);
            }
        });
    });
</script>
