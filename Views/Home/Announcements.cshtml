@model JAS_MINE_IT15.Models.AnnouncementsViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Announcements";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string PriorityClass(string p) => p switch
    {
        "high" => "badge rounded-pill bg-danger bg-opacity-10 text-danger border border-danger-subtle",
        "medium" => "badge rounded-pill bg-warning bg-opacity-10 text-warning border border-warning-subtle",
        _ => "badge rounded-pill bg-info bg-opacity-10 text-info border border-info-subtle"
    };

    string StatusClass(string s) => s == "published"
        ? "badge rounded-pill bg-primary bg-opacity-10 text-primary border border-primary-subtle"
        : "badge rounded-pill bg-secondary bg-opacity-10 text-secondary border border-secondary-subtle";

    string CardPinnedClass(bool pinned) => pinned ? "border-primary-subtle bg-primary bg-opacity-10" : "";
    
    // Null-safe properties
    var archiveStatus = Model?.ArchiveStatus ?? "active";
    var filter = Model?.Filter ?? "all";
    var canCreate = Model?.CanCreate ?? false;
    var canArchive = Model?.CanArchive ?? false;
    var isViewingArchived = archiveStatus == "archived";
    var announcements = Model?.Announcements ?? new List<JAS_MINE_IT15.Models.AnnouncementItem>();
    var total = Model?.Total ?? 0;
    var published = Model?.Published ?? 0;
    var drafts = Model?.Drafts ?? 0;
    var archived = Model?.Archived ?? 0;
    var successMessage = Model?.SuccessMessage ?? "";
    var errorMessage = Model?.ErrorMessage ?? "";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

<style>
    .page-wrap {
        padding: 18px;
    }

    .stat-card {
        border-radius: 12px;
    }

    .pill-btn {
        border-radius: 10px;
    }

    .ann-card {
        border-radius: 14px;
        border: 1px solid #e5e7eb;
    }

    .muted {
        color: #6b7280;
    }

    .action-btn {
        width: 38px;
        height: 38px;
        border-radius: 10px;
    }
</style>

<div class="page-wrap">

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@errorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h3 class="mb-0">Announcements</h3>
            <div class="muted">Manage and publish announcements across barangays.</div>
        </div>

        @if (canCreate)
        {
            <button class="btn btn-primary d-flex align-items-center gap-2"
                    data-bs-toggle="modal" data-bs-target="#createEditModal"
                    onclick="openCreate()">
                <i class="bi bi-plus-lg"></i>
                New Announcement
            </button>
        }
    </div>

    <div class="row g-3 mb-3">
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-primary">@total</div><div class="small muted">Total</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-success">@published</div><div class="small muted">Published</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-warning">@drafts</div><div class="small muted">Drafts</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-secondary">@archived</div><div class="small muted">Archived</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Archive Status Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(archiveStatus == "active" ? "active" : "")"
               href="@Url.Action("Announcements", "Home", new { filter = filter, archiveStatus = "active" })">
                <i class="bi bi-check-circle me-1"></i> Active (@total)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(archiveStatus == "archived" ? "active" : "")"
               href="@Url.Action("Announcements", "Home", new { filter = filter, archiveStatus = "archived" })">
                <i class="bi bi-archive me-1"></i> Archived (@archived)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(archiveStatus == "all" ? "active" : "")"
               href="@Url.Action("Announcements", "Home", new { filter = filter, archiveStatus = "all" })">
                <i class="bi bi-list-ul me-1"></i> All
            </a>
        </li>
    </ul>

    <div class="d-flex gap-2 mb-3">
        <a class="btn pill-btn @(filter == "all" ? "btn-primary" : "btn-outline-secondary") btn-sm"
           href="@Url.Action("Announcements", "Home", new { filter = "all", archiveStatus = archiveStatus })">All</a>

        <a class="btn pill-btn @(filter == "published" ? "btn-primary" : "btn-outline-secondary") btn-sm"
           href="@Url.Action("Announcements", "Home", new { filter = "published", archiveStatus = archiveStatus })">Published</a>

        <a class="btn pill-btn @(filter == "draft" ? "btn-primary" : "btn-outline-secondary") btn-sm"
           href="@Url.Action("Announcements", "Home", new { filter = "draft", archiveStatus = archiveStatus })">Draft</a>
    </div>

    <div class="d-flex flex-column gap-3">
        @foreach (var a in announcements)
        {
            <div class="ann-card p-4 @CardPinnedClass(a.Pinned) @(a.IsArchived ? "opacity-75" : "")">
                <div class="d-flex align-items-start justify-content-between gap-3">
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center flex-wrap gap-2 mb-2">
                            @if (a.Pinned)
                            {
                                <i class="bi bi-pin-angle-fill text-primary"></i>
                            }
                            @if (a.IsArchived)
                            {
                                <span class="badge bg-secondary">Archived</span>
                            }
                            <div class="fw-semibold fs-6">@a.Title</div>
                            <span class="@PriorityClass(a.Priority)">@a.Priority</span>
                            <span class="@StatusClass(a.Status)">@a.Status</span>
                        </div>

                        <div class="text-sm muted mb-2">@a.Content</div>

                        <div class="d-flex align-items-center flex-wrap gap-4 small muted">
                            <span class="d-flex align-items-center gap-1"><i class="bi bi-calendar3"></i> @a.Date</span>
                            <span>By @a.Author</span>
                            <span class="d-flex align-items-center gap-1"><i class="bi bi-eye"></i> @a.Views views</span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        @if (!a.IsArchived)
                        {
                            <!-- VIEW: increments views -->
                            <form method="post" action="@Url.Action("IncrementAnnouncementViews","Home")" class="m-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@a.Id" />
                                <input type="hidden" name="filter" value="@filter" />
                                <button class="btn btn-light action-btn" title="View" type="submit">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </form>

                            <!-- EDIT -->
                            <button class="btn btn-light action-btn" title="Edit"
                                    data-bs-toggle="modal" data-bs-target="#createEditModal"
                                    onclick="openEdit('@a.Id','@Html.Raw(a.Title.Replace("'", "\\'").Replace("\n", "\\n"))','@Html.Raw(a.Content.Replace("'", "\\'").Replace("\n", "\\n"))','@a.Priority','@a.Status')">
                                <i class="bi bi-pencil"></i>
                            </button>

                            <!-- PIN -->
                            <form method="post" action="@Url.Action("TogglePinAnnouncement","Home")" class="m-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@a.Id" />
                                <input type="hidden" name="filter" value="@filter" />
                                <button class="btn btn-light action-btn" title="Pin/Unpin" type="submit">
                                    <i class="bi bi-pin@(a.Pinned ? "-fill text-primary" : "")"></i>
                                </button>
                            </form>

                            @if (canArchive)
                            {
                                <!-- ARCHIVE -->
                                <button class="btn btn-light action-btn" title="Archive"
                                        data-bs-toggle="modal" data-bs-target="#archiveModal"
                                        onclick="openArchive('@a.Id','@Html.Raw(a.Title.Replace("'", "\\'"))')">
                                    <i class="bi bi-archive text-warning"></i>
                                </button>
                            }
                        }
                        else
                        {
                            @if (canArchive)
                            {
                                <!-- RESTORE -->
                                <form method="post" action="@Url.Action("RestoreAnnouncement","Home")" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@a.Id" />
                                    <input type="hidden" name="filter" value="@filter" />
                                    <button class="btn btn-success action-btn" title="Restore" type="submit">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                    </button>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
        }

        @if (!announcements.Any())
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-megaphone fs-1 mb-3 d-block"></i>
                <p>No announcements found.</p>
            </div>
        }
    </div>
</div>

<!-- CREATE/EDIT MODAL -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <form id="createEditForm" method="post" action="@Url.Action("CreateAnnouncement","Home")">
                @Html.AntiForgeryToken()
                <input type="hidden" name="filter" value="@filter" />
                <input type="hidden" id="formId" name="id" />

                <div class="modal-header">
                    <h5 class="modal-title" id="createEditTitle">Create Announcement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input class="form-control" id="formTitle" name="title" placeholder="Announcement title" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Content</label>
                        <textarea class="form-control" id="formContent" name="content" rows="4" placeholder="Write your announcement..."></textarea>
                    </div>

                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label">Priority</label>
                            <select class="form-select" id="formPriority" name="priority">
                                <option value="high">High</option>
                                <option value="medium" selected>Medium</option>
                                <option value="low">Low</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">Status</label>
                            <select class="form-select" id="formStatus" name="status">
                                <option value="draft" selected>Draft</option>
                                <option value="published">Publish Now</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary" type="submit" id="saveBtn">Create</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- ARCHIVE MODAL -->
<div class="modal fade" id="archiveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form method="post" action="@Url.Action("ArchiveAnnouncement","Home")">
                @Html.AntiForgeryToken()
                <input type="hidden" name="filter" value="@filter" />
                <input type="hidden" id="archiveId" name="id" />

                <div class="modal-header">
                    <h5 class="modal-title text-warning">Archive Announcement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    Are you sure you want to archive "<span class="fw-semibold" id="archiveName"></span>"?
                </div>

                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-warning" type="submit">Archive</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function openCreate() {
        document.getElementById('createEditTitle').innerText = 'Create Announcement';
        document.getElementById('saveBtn').innerText = 'Create';

        const form = document.getElementById('createEditForm');
        form.action = '@Url.Action("CreateAnnouncement", "Home")';

        document.getElementById('formId').value = '';
        document.getElementById('formTitle').value = '';
        document.getElementById('formContent').value = '';
        document.getElementById('formPriority').value = 'medium';
        document.getElementById('formStatus').value = 'draft';
    }

    function openEdit(id, title, content, priority, status) {
        document.getElementById('createEditTitle').innerText = 'Edit Announcement';
        document.getElementById('saveBtn').innerText = 'Save Changes';

        const form = document.getElementById('createEditForm');
        form.action = '@Url.Action("EditAnnouncement", "Home")';

        document.getElementById('formId').value = id;
        document.getElementById('formTitle').value = title;
        document.getElementById('formContent').value = content;
        document.getElementById('formPriority').value = priority;
        document.getElementById('formStatus').value = status;
    }

    function openArchive(id, title) {
        document.getElementById('archiveId').value = id;
        document.getElementById('archiveName').innerText = title;
    }
</script>
