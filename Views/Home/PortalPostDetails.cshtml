@model JAS_MINE_IT15.Models.PortalPostsViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = Model?.SelectedPost?.Title ?? "Post Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var post = Model?.SelectedPost;
    var canModify = Model?.CanModify ?? false;
}

<style>
    .page-title { font-size: 28px; font-weight: 800; color: #0f2747; margin: 0; }
    .soft-card { background: #fff; border: 1px solid #e6edf5; border-radius: 12px; box-shadow: 0 4px 14px rgba(16,24,40,.06); }
    .btn-primary-custom { background: #163a5f; border-color: #163a5f; border-radius: 10px; height: 42px; font-weight: 700; padding: 0 18px; color: #fff; }
    .btn-primary-custom:hover { background: #102d49; border-color: #102d49; color: #fff; }
    .post-meta { color: #6c7a89; font-size: 14px; display: flex; align-items: center; gap: 20px; margin-bottom: 20px; }
    .post-content { color: #374151; font-size: 16px; line-height: 1.8; white-space: pre-wrap; }
    .tag-badge { background: #f1f5f9; color: #64748b; border-radius: 999px; padding: 6px 14px; font-size: 13px; font-weight: 600; margin-right: 8px; display: inline-block; margin-bottom: 8px; }
    .pinned-badge { background: #fef3c7; color: #b45309; border-radius: 999px; padding: 6px 14px; font-size: 13px; font-weight: 700; }
</style>

<div class="container-fluid">
    <!-- Back Button -->
    <div class="mb-4">
        <a asp-action="PortalPosts" class="btn btn-outline-secondary" style="border-radius:10px;">
            <i class="bi bi-arrow-left me-2"></i>Back to Posts
        </a>
    </div>

    @if (post == null)
    {
        <div class="soft-card p-5 text-center">
            <h4 class="text-muted">Post not found.</h4>
            <a asp-action="PortalPosts" class="btn btn-primary-custom mt-3">Return to Posts</a>
        </div>
    }
    else
    {
        <div class="soft-card p-4 p-md-5">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    @if (post.IsPinned)
                    {
                        <span class="pinned-badge mb-2"><i class="bi bi-pin-fill me-1"></i>Pinned Post</span>
                    }
                    <h1 class="page-title mt-2">@post.Title</h1>
                </div>
                @if (canModify)
                {
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary" data-bs-toggle="dropdown" style="border-radius:10px;">
                            <i class="bi bi-three-dots me-1"></i>Actions
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <form asp-action="ArchivePortalPost" method="post" onsubmit="return confirm('Archive this post?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@post.Id" />
                                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-archive me-2"></i>Archive</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>

            <!-- Meta -->
            <div class="post-meta">
                <span><i class="bi bi-person me-2"></i>@post.PostedBy</span>
                <span><i class="bi bi-calendar3 me-2"></i>@post.PostedOn.ToString("MMMM dd, yyyy 'at' h:mm tt")</span>
            </div>

            <!-- Tags -->
            @if (!string.IsNullOrWhiteSpace(post.Tags))
            {
                <div class="mb-4">
                    @foreach (var tag in post.Tags.Split(','))
                    {
                        <span class="tag-badge"><i class="bi bi-tag me-1"></i>@tag.Trim()</span>
                    }
                </div>
            }

            <hr class="my-4" />

            <!-- Content -->
            <div class="post-content">@post.Content</div>
        </div>
    }
</div>
