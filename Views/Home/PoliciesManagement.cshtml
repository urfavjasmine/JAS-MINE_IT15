@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Policies & Procedures";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // UI-only (no backend)
    var canCreate = true;   // set true/false if you want to hide/show Create button
    var canApprove = true;  // set true/false if you want to hide/show Approve/Reject

    var policies = new[]
    {
        new { Id=1, Title="Waste Management Policy", Description="Guidelines for proper waste segregation and disposal in the barangay.", Status="approved", LastUpdated="2024-02-01", Author="Maria Santos", Version="2.1" },
        new { Id=2, Title="Community Health Guidelines", Description="Health protocols and emergency response procedures for residents.", Status="pending",  LastUpdated="2024-01-28", Author="Juan dela Cruz", Version="1.0" },
        new { Id=3, Title="Budget Allocation Policy", Description="Standard operating procedures for budget allocation and disbursement.", Status="draft",    LastUpdated="2024-01-25", Author="Ana Reyes", Version="0.9" },
        new { Id=4, Title="Business Permit Guidelines", Description="Requirements and procedures for obtaining business permits.", Status="approved", LastUpdated="2024-01-20", Author="Pedro Garcia", Version="3.0" },
        new { Id=5, Title="Peace and Order Procedures", Description="Protocols for maintaining peace and order in the community.", Status="approved", LastUpdated="2024-01-15", Author="Maria Santos", Version="1.5" },
    };

    int CountStatus(string s) => policies.Count(p => p.Status == s);

    string StatusBadge(string status) => status switch
    {
        "approved" => "<span class=\"badge badge-approved\">Approved</span>",
        "pending" => "<span class=\"badge badge-pending\">Pending Approval</span>",
        "draft" => "<span class=\"badge badge-draft\">Draft</span>",
        _ => $"<span class=\"badge badge-draft\">{status}</span>"
    };

    string StatusIcon(string status) => status switch
    {
        "approved" => "<span class=\"status-ico ok\"><i class=\"bi bi-check-circle\"></i></span>",
        "pending" => "<span class=\"status-ico warn\"><i class=\"bi bi-clock\"></i></span>",
        "draft" => "<span class=\"status-ico mute\"><i class=\"bi bi-exclamation-circle\"></i></span>",
        _ => "<span class=\"status-ico mute\"><i class=\"bi bi-info-circle\"></i></span>"
    };
}

<style>
    .page-title {
        font-size: 28px;
        font-weight: 800;
        color: #0f2747;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .page-subtitle {
        color: #6c7a89;
        margin-top: 4px;
    }

    .btn-primary-custom {
        background: #163a5f;
        border-color: #163a5f;
        border-radius: 10px;
        height: 42px;
        font-weight: 700;
        padding: 0 18px;
        color: #fff;
    }

        .btn-primary-custom:hover {
            background: #102d49;
            border-color: #102d49;
            color: #fff;
        }

    .soft-card {
        background: #fff;
        border: 1px solid #e6edf5;
        border-radius: 12px;
        box-shadow: 0 4px 14px rgba(16,24,40,.06);
    }

    .status-tabs {
        display: inline-flex;
        gap: 6px;
        background: #f5f7fb;
        border: 1px solid #e6edf5;
        border-radius: 12px;
        padding: 6px;
    }

    .tab-btn {
        border: 0;
        background: transparent;
        padding: 8px 14px;
        border-radius: 10px;
        font-weight: 700;
        color: #516173;
        cursor: pointer;
        white-space: nowrap;
    }

        .tab-btn.active {
            background: #fff;
            color: #1f2d3d;
            box-shadow: 0 2px 10px rgba(16,24,40,.08);
        }

    /* Filter card */
    .filter-card {
        padding: 14px;
    }

    .search-wrap {
        position: relative;
    }

    .search-ico {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #7b8794;
        font-size: 16px;
    }

    .search-input {
        height: 46px;
        padding-left: 42px;
        border-radius: 10px;
        border: 1px solid #d9e3ef;
    }

        .search-input:focus {
            box-shadow: none;
            border-color: #9bb7d6;
        }

    .select-input {
        height: 46px;
        border-radius: 10px;
        border: 1px solid #d9e3ef;
    }

    /* Policy card (grid) */
    .policy-card {
        padding: 18px;
    }

    .policy-title {
        font-size: 16px;
        font-weight: 800;
        color: #1f2d3d;
        margin: 0;
        line-height: 1.2;
    }

    .policy-desc {
        color: #6c7a89;
        margin-top: 10px;
        margin-bottom: 16px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .status-ico {
        width: 18px;
        height: 18px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 999px;
        font-size: 14px;
    }

        .status-ico.ok {
            color: #1b7a3a;
        }

        .status-ico.warn {
            color: #b36b00;
        }

        .status-ico.mute {
            color: #7b8794;
        }

    .badge-approved {
        background: #dff5e6;
        color: #1b7a3a;
        border-radius: 999px;
        padding: 6px 12px;
        font-weight: 800;
        font-size: 12px;
        display: inline-block;
    }

    .badge-pending {
        background: #fff3da;
        color: #b36b00;
        border-radius: 999px;
        padding: 6px 12px;
        font-weight: 800;
        font-size: 12px;
        display: inline-block;
    }

    .badge-draft {
        background: #eef2f6;
        color: #55657a;
        border-radius: 999px;
        padding: 6px 12px;
        font-weight: 800;
        font-size: 12px;
        display: inline-block;
    }

    .meta {
        color: #6c7a89;
        font-size: 12px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        white-space: nowrap;
    }

    .dot {
        color: #c2cfde;
        margin: 0 6px;
    }

    /* 3-dots button */
    .kebab-btn {
        width: 34px;
        height: 34px;
        border-radius: 10px;
    }
</style>

<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between gap-3 mb-4">
        <div>
            <div class="page-title">
                <i class="bi bi-file-earmark-text" style="color:#163a5f;"></i>
                Policies &amp; Procedures
            </div>
            <div class="page-subtitle">Create, manage, and track policy documents</div>
        </div>

        @if (canCreate)
        {
            <button class="btn btn-primary-custom" type="button">
                <i class="bi bi-plus-lg me-2"></i>Create Policy
            </button>
        }
    </div>

    <!-- Status Tabs -->
    <div class="mb-3">
        <div class="status-tabs" role="tablist" aria-label="Policy Status Tabs">
            <button class="tab-btn active" type="button" data-tab="all">
                All (@policies.Length)
            </button>
            <button class="tab-btn" type="button" data-tab="approved">
                Approved (@CountStatus("approved"))
            </button>
            <button class="tab-btn" type="button" data-tab="pending">
                Pending (@CountStatus("pending"))
            </button>
            <button class="tab-btn" type="button" data-tab="draft">
                Drafts (@CountStatus("draft"))
            </button>
        </div>
    </div>

    <!-- Search + Filter -->
    <div class="soft-card filter-card mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-12 col-lg-9">
                <div class="search-wrap">
                    <span class="search-ico"><i class="bi bi-search"></i></span>
                    <input id="policySearch" class="form-control search-input" placeholder="Search policies..." />
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <div class="position-relative">
                    <span class="search-ico" style="left:14px;"><i class="bi bi-funnel"></i></span>
                    <select id="statusFilter" class="form-select select-input" style="padding-left:42px;">
                        <option value="all">All Status</option>
                        <option value="approved">Approved</option>
                        <option value="pending">Pending</option>
                        <option value="draft">Draft</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Policies Grid -->
    <div id="policiesGrid" class="row g-4">
        @foreach (var p in policies)
        {
            <div class="col-12 col-md-6 policy-item"
                 data-status="@p.Status"
                 data-title="@p.Title.ToLower()"
                 data-desc="@p.Description.ToLower()">
                <div class="soft-card policy-card">
                    <div class="d-flex align-items-start justify-content-between gap-2">
                        <div class="d-flex align-items-start gap-2">
                            @Html.Raw(StatusIcon(p.Status))
                            <div>
                                <h3 class="policy-title">@p.Title</h3>
                            </div>
                        </div>

                        <!-- 3 dots dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-light kebab-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li>
                                    <a class="dropdown-item" href="javascript:void(0)">
                                        <i class="bi bi-eye me-2"></i>View
                                    </a>
                                </li>
                                @if (canCreate)
                                {
                                    <li>
                                        <a class="dropdown-item" href="javascript:void(0)">
                                            <i class="bi bi-pencil-square me-2"></i>Edit
                                        </a>
                                    </li>
                                }
                                @if (canApprove && p.Status == "pending")
                                {
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item text-success" href="javascript:void(0)">Approve</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="javascript:void(0)">Reject</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="policy-desc">@p.Description</div>

                    <div class="d-flex align-items-center justify-content-between">
                        <div class="meta">
                            <span>v@p.Version</span>
                            <span class="dot">•</span>
                            <span>@p.LastUpdated</span>
                        </div>
                        @Html.Raw(StatusBadge(p.Status))
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    (function () {
        const tabs = Array.from(document.querySelectorAll(".tab-btn"));
        const search = document.getElementById("policySearch");
        const statusSelect = document.getElementById("statusFilter");
        const items = Array.from(document.querySelectorAll(".policy-item"));

        let activeTab = "all";

        function setActiveTab(tab) {
            activeTab = tab;
            tabs.forEach(b => b.classList.toggle("active", b.getAttribute("data-tab") === tab));
            // sync dropdown filter if user clicks tabs
            if (statusSelect) statusSelect.value = tab === "all" ? "all" : tab;
            applyFilters();
        }

        function applyFilters() {
            const q = (search.value || "").toLowerCase().trim();
            const dropdownStatus = statusSelect.value || "all";

            // tab filter has priority, but keep it same as dropdown (we sync above)
            const status = dropdownStatus;

            items.forEach(it => {
                const st = it.getAttribute("data-status") || "";
                const title = it.getAttribute("data-title") || "";
                const desc = it.getAttribute("data-desc") || "";

                const matchesSearch = !q || title.includes(q) || desc.includes(q);
                const matchesStatus = (status === "all") || (st === status);

                it.style.display = (matchesSearch && matchesStatus) ? "" : "none";
            });
        }

        tabs.forEach(b => b.addEventListener("click", () => setActiveTab(b.getAttribute("data-tab"))));
        search && search.addEventListener("input", applyFilters);
        statusSelect && statusSelect.addEventListener("change", function () {
            // when dropdown changes, update active tab UI
            const v = statusSelect.value;
            setActiveTab(v === "all" ? "all" : v);
        });

        // init
        setActiveTab("all");
    })();
</script>
