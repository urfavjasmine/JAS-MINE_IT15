@model JAS_MINE_IT15.Models.PoliciesManagementViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Policies & Procedures";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Permissions from controller
    var canCreate = Model?.CanCreate ?? false;
    var canApprove = Model?.CanApprove ?? false;
    var canArchive = Model?.CanArchive ?? false;
    var archiveStatus = Model?.ArchiveStatus ?? "active";

    // TODO: Load from database via controller
    var policies = Model?.Policies ?? new List<JAS_MINE_IT15.Models.PolicyItem>();

    string StatusBadge(string status) => status switch
    {
        "approved" => "<span class=\"badge badge-approved\">Approved</span>",
        "pending" => "<span class=\"badge badge-pending\">Pending Approval</span>",
        "draft" => "<span class=\"badge badge-draft\">Draft</span>",
        _ => $"<span class=\"badge badge-draft\">{status}</span>"
    };

    string StatusIcon(string status) => status switch
    {
        "approved" => "<span class=\"status-ico ok\"><i class=\"bi bi-check-circle\"></i></span>",
        "pending" => "<span class=\"status-ico warn\"><i class=\"bi bi-clock\"></i></span>",
        "draft" => "<span class=\"status-ico mute\"><i class=\"bi bi-exclamation-circle\"></i></span>",
        _ => "<span class=\"status-ico mute\"><i class=\"bi bi-info-circle\"></i></span>"
    };
}

<style>
    .page-title {
        font-size: 28px;
        font-weight: 800;
        color: #0f2747;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .page-subtitle {
        color: #6c7a89;
        margin-top: 4px;
    }

    .btn-primary-custom {
        background: #163a5f;
        border-color: #163a5f;
        border-radius: 10px;
        height: 42px;
        font-weight: 700;
        padding: 0 18px;
        color: #fff;
    }

        .btn-primary-custom:hover {
            background: #102d49;
            border-color: #102d49;
            color: #fff;
        }

    .soft-card {
        background: #fff;
        border: 1px solid #e6edf5;
        border-radius: 12px;
        box-shadow: 0 4px 14px rgba(16,24,40,.06);
    }

    .status-tabs {
        display: inline-flex;
        gap: 6px;
        background: #f5f7fb;
        border: 1px solid #e6edf5;
        border-radius: 12px;
        padding: 6px;
    }

    .tab-btn {
        border: 0;
        background: transparent;
        padding: 8px 14px;
        border-radius: 10px;
        font-weight: 700;
        color: #516173;
        cursor: pointer;
        white-space: nowrap;
    }

        .tab-btn.active {
            background: #fff;
            color: #1f2d3d;
            box-shadow: 0 2px 10px rgba(16,24,40,.08);
        }

    /* Filter card */
    .filter-card {
        padding: 14px;
    }

    .search-wrap {
        position: relative;
    }

    .search-ico {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #7b8794;
        font-size: 16px;
    }

    .search-input {
        height: 46px;
        padding-left: 42px;
        border-radius: 10px;
        border: 1px solid #d9e3ef;
    }

        .search-input:focus {
            box-shadow: none;
            border-color: #9bb7d6;
        }

    .select-input {
        height: 46px;
        border-radius: 10px;
        border: 1px solid #d9e3ef;
    }

    /* Policy card (grid) */
    .policy-card {
        padding: 18px;
    }

    .policy-title {
        font-size: 16px;
        font-weight: 800;
        color: #1f2d3d;
        margin: 0;
        line-height: 1.2;
    }

    .policy-desc {
        color: #6c7a89;
        margin-top: 10px;
        margin-bottom: 16px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .status-ico {
        width: 18px;
        height: 18px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 999px;
        font-size: 14px;
    }

        .status-ico.ok {
            color: #1b7a3a;
        }

        .status-ico.warn {
            color: #b36b00;
        }

        .status-ico.mute {
            color: #7b8794;
        }

    .badge-approved {
        background: #dff5e6;
        color: #1b7a3a;
        border-radius: 999px;
        padding: 6px 12px;
        font-weight: 800;
        font-size: 12px;
        display: inline-block;
    }

    .badge-pending {
        background: #fff3da;
        color: #b36b00;
        border-radius: 999px;
        padding: 6px 12px;
        font-weight: 800;
        font-size: 12px;
        display: inline-block;
    }

    .badge-draft {
        background: #eef2f6;
        color: #55657a;
        border-radius: 999px;
        padding: 6px 12px;
        font-weight: 800;
        font-size: 12px;
        display: inline-block;
    }

    .meta {
        color: #6c7a89;
        font-size: 12px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        white-space: nowrap;
    }

    .dot {
        color: #c2cfde;
        margin: 0 6px;
    }

    /* 3-dots button */
    .kebab-btn {
        width: 34px;
        height: 34px;
        min-width: 34px;
        border-radius: 10px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #e6edf5;
        background: #fff;
        cursor: pointer;
        position: relative;
        z-index: 10;
        flex-shrink: 0;
    }
    .kebab-btn:hover, .kebab-btn:focus {
        background: #f0f3f8;
        border-color: #cdd8e5;
    }
    .policy-card .dropdown {
        position: relative;
        z-index: 10;
        flex-shrink: 0;
    }
    .policy-card .dropdown-menu {
        z-index: 1050;
    }
    .soft-card.policy-card {
        overflow: visible;
        position: relative;
    }
</style>

<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between gap-3 mb-4">
        <div>
            <div class="page-title">
                <i class="bi bi-file-earmark-text" style="color:#163a5f;"></i>
                Policies &amp; Procedures
            </div>
            <div class="page-subtitle">Create, manage, and track policy documents</div>
        </div>

        @if (canCreate)
        {
            <button class="btn btn-primary-custom" type="button" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="bi bi-plus-lg me-2"></i>Create Policy
            </button>
        }
    </div>

    <!-- Archive Status Tabs -->
    <div class="mb-4">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link @(archiveStatus == "active" ? "active" : "")" asp-action="PoliciesManagement" asp-route-archiveStatus="active">
                    <i class="bi bi-check-circle me-1"></i>Active (@(Model?.CountAll ?? 0))
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(archiveStatus == "archived" ? "active" : "")" asp-action="PoliciesManagement" asp-route-archiveStatus="archived">
                    <i class="bi bi-archive me-1"></i>Archived (@(Model?.CountArchived ?? 0))
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(archiveStatus == "all" ? "active" : "")" asp-action="PoliciesManagement" asp-route-archiveStatus="all">
                    <i class="bi bi-list me-1"></i>All
                </a>
            </li>
        </ul>
    </div>

    <!-- Status Tabs -->
    <div class="mb-3">
        <div class="status-tabs" role="tablist" aria-label="Policy Status Tabs">
            <button class="tab-btn active" type="button" data-tab="all">
                All (@(Model?.CountAll ?? 0))
            </button>
            <button class="tab-btn" type="button" data-tab="approved">
                Approved (@(Model?.CountApproved ?? 0))
            </button>
            <button class="tab-btn" type="button" data-tab="pending">
                Pending (@(Model?.CountPending ?? 0))
            </button>
            <button class="tab-btn" type="button" data-tab="draft">
                Drafts (@(Model?.CountDraft ?? 0))
            </button>
        </div>
    </div>

    <!-- Search + Filter -->
    <div class="soft-card filter-card mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-12 col-lg-9">
                <div class="search-wrap">
                    <span class="search-ico"><i class="bi bi-search"></i></span>
                    <input id="policySearch" class="form-control search-input" placeholder="Search policies..." />
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <div class="position-relative">
                    <span class="search-ico" style="left:14px;"><i class="bi bi-funnel"></i></span>
                    <select id="statusFilter" class="form-select select-input" style="padding-left:42px;">
                        <option value="all">All Status</option>
                        <option value="approved">Approved</option>
                        <option value="pending">Pending</option>
                        <option value="draft">Draft</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Policies Grid -->
    <div id="policiesGrid" class="row g-4">
        @if (policies.Count == 0)
        {
            <div class="col-12">
                <div class="soft-card p-4 text-center text-muted">No policies found.</div>
            </div>
        }
        else
        {
            foreach (var p in policies)
            {
                <div class="col-12 col-md-6 policy-item"
                     data-status="@p.Status"
                     data-title="@p.Title.ToLower()"
                     data-desc="@p.Description.ToLower()">
                    <div class="soft-card policy-card">
                        <div class="d-flex align-items-start justify-content-between gap-2" style="position: relative;">
                            <div class="d-flex align-items-start gap-2" style="flex: 1; min-width: 0;">
                                @Html.Raw(StatusIcon(p.Status))
                                <div style="min-width: 0;">
                                    <h3 class="policy-title">@p.Title</h3>
                                </div>
                            </div>

                            <!-- 3 dots dropdown -->
                            <div class="dropdown" style="flex-shrink: 0;">
                                <button class="btn btn-light kebab-btn" type="button" id="policyMenu_@p.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li>
                                        <button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#viewModal"
                                                onclick="openView('@p.Id','@js(p.Title)','@js(p.Description)','@p.Status','@p.Version','@p.Author','@p.LastUpdated')">
                                            <i class="bi bi-eye me-2"></i>View
                                        </button>
                                    </li>
                                    @if (canCreate)
                                    {
                                        <li>
                                            <button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#editModal"
                                                    onclick="openEdit('@p.Id','@js(p.Title)','@js(p.Description)')">
                                                <i class="bi bi-pencil-square me-2"></i>Edit
                                            </button>
                                        </li>
                                    }
                                    @if (canArchive)
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        @if (p.IsArchived)
                                        {
                                            <li>
                                                <form method="post" asp-action="RestorePolicy" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@p.Id" />
                                                    <input type="hidden" name="status" value="@(Model?.StatusFilter ?? "")" />
                                                    <input type="hidden" name="q" value="@(Model?.SearchQuery ?? "")" />
                                                    <button class="dropdown-item text-success" type="submit" onclick="return confirm('Restore this policy?');">
                                                        <i class="bi bi-arrow-counterclockwise me-2"></i>Restore
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <button class="dropdown-item text-warning" type="button" data-bs-toggle="modal" data-bs-target="#archiveModal"
                                                        onclick="openArchive('@p.Id','@js(p.Title)')">
                                                    <i class="bi bi-archive me-2"></i>Archive
                                                </button>
                                            </li>
                                        }
                                    }
                                    @if (canApprove && (p.Status == "pending" || p.Status == "draft"))
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <form method="post" asp-action="SetPolicyStatus" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <input type="hidden" name="newStatus" value="approved" />
                                                <input type="hidden" name="status" value="@(Model?.StatusFilter ?? "")" />
                                                <input type="hidden" name="q" value="@(Model?.SearchQuery ?? "")" />
                                                <button class="dropdown-item text-success" type="submit">
                                                    <i class="bi bi-check-circle me-2"></i>Approve
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-action="SetPolicyStatus" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <input type="hidden" name="newStatus" value="rejected" />
                                                <input type="hidden" name="status" value="@(Model?.StatusFilter ?? "")" />
                                                <input type="hidden" name="q" value="@(Model?.SearchQuery ?? "")" />
                                                <button class="dropdown-item text-danger" type="submit">
                                                    <i class="bi bi-x-circle me-2"></i>Reject
                                                </button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                        <div class="policy-desc">@p.Description</div>

                        <div class="d-flex align-items-center justify-content-between">
                            <div class="meta">
                                <span>v@(p.Version)</span>
                                <span class="dot">•</span>
                                <span>@p.LastUpdated</span>
                            </div>
                            @Html.Raw(StatusBadge(p.Status))
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@functions {
    public string js(string? s)
    {
        s ??= "";
        return s.Replace("\\", "\\\\").Replace("'", "\\'").Replace("\r", "").Replace("\n", "\\n");
    }
}

<!-- CREATE MODAL -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-action="CreatePolicy">
                @Html.AntiForgeryToken()
                <input type="hidden" name="status" value="@(Model?.StatusFilter ?? "")" />
                <input type="hidden" name="q" value="@(Model?.SearchQuery ?? "")" />
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Create Policy</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="title" required placeholder="Enter policy title" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <textarea class="form-control" name="description" rows="4" placeholder="Enter policy description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Policy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- EDIT MODAL -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-action="EditPolicy">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="eId" />
                <input type="hidden" name="status" value="@(Model?.StatusFilter ?? "")" />
                <input type="hidden" name="q" value="@(Model?.SearchQuery ?? "")" />
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Edit Policy</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="title" id="eTitle" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <textarea class="form-control" name="description" id="eDesc" rows="4"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- VIEW MODAL -->
<div class="modal fade" id="viewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="vTitle">Policy Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3" id="vStatusBadge"></div>
                <div class="mb-3">
                    <div class="small text-muted">Description</div>
                    <p id="vDesc" style="white-space:pre-wrap;"></p>
                </div>
                <hr />
                <div class="row small text-muted">
                    <div class="col-6"><b>Version:</b> <span id="vVersion"></span></div>
                    <div class="col-6"><b>Author:</b> <span id="vAuthor"></span></div>
                    <div class="col-6 mt-2"><b>Last Updated:</b> <span id="vDate"></span></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ARCHIVE MODAL -->
<div class="modal fade" id="archiveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-action="ArchivePolicy">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="aId" />
                <input type="hidden" name="status" value="@(Model?.StatusFilter ?? "")" />
                <input type="hidden" name="q" value="@(Model?.SearchQuery ?? "")" />
                <div class="modal-header">
                    <h5 class="modal-title text-warning"><i class="bi bi-archive me-2"></i>Archive Policy</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to archive "<span id="aTitle" class="fw-bold"></span>"?
                    <div class="text-muted small mt-2">This policy will be removed from the active list.</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Archive</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openEdit(id, title, desc) {
        document.getElementById('eId').value = id;
        document.getElementById('eTitle').value = title;
        document.getElementById('eDesc').value = desc;
    }

    function openView(id, title, desc, status, version, author, date) {
        document.getElementById('vTitle').textContent = title;
        document.getElementById('vDesc').textContent = desc || 'No description provided.';
        document.getElementById('vVersion').textContent = version;
        document.getElementById('vAuthor').textContent = author;
        document.getElementById('vDate').textContent = date;
        
        var badge = '';
        if (status === 'approved') badge = '<span class="badge-approved">Approved</span>';
        else if (status === 'pending') badge = '<span class="badge-pending">Pending Approval</span>';
        else if (status === 'rejected') badge = '<span class="badge bg-danger">Rejected</span>';
        else badge = '<span class="badge-draft">Draft</span>';
        document.getElementById('vStatusBadge').innerHTML = badge;
    }

    function openArchive(id, title) {
        document.getElementById('aId').value = id;
        document.getElementById('aTitle').textContent = title;
    }

    (function () {
        const tabs = Array.from(document.querySelectorAll(".tab-btn"));
        const search = document.getElementById("policySearch");
        const statusSelect = document.getElementById("statusFilter");
        const items = Array.from(document.querySelectorAll(".policy-item"));

        let activeTab = "all";

        function setActiveTab(tab) {
            activeTab = tab;
            tabs.forEach(b => b.classList.toggle("active", b.getAttribute("data-tab") === tab));
            if (statusSelect) statusSelect.value = tab === "all" ? "all" : tab;
            applyFilters();
        }

        function applyFilters() {
            const q = (search.value || "").toLowerCase().trim();
            const dropdownStatus = statusSelect.value || "all";
            const status = dropdownStatus;

            items.forEach(it => {
                const st = it.getAttribute("data-status") || "";
                const title = it.getAttribute("data-title") || "";
                const desc = it.getAttribute("data-desc") || "";

                const matchesSearch = !q || title.includes(q) || desc.includes(q);
                const matchesStatus = (status === "all") || (st === status);

                it.style.display = (matchesSearch && matchesStatus) ? "" : "none";
            });
        }

        tabs.forEach(b => b.addEventListener("click", () => setActiveTab(b.getAttribute("data-tab"))));
        search && search.addEventListener("input", applyFilters);
        statusSelect && statusSelect.addEventListener("change", function () {
            const v = statusSelect.value;
            setActiveTab(v === "all" ? "all" : v);
        });

        setActiveTab("all");
    })();

    // Ensure Bootstrap dropdowns are initialized for kebab buttons
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.kebab-btn[data-bs-toggle="dropdown"]').forEach(function(btn) {
            if (!bootstrap.Dropdown.getInstance(btn)) {
                new bootstrap.Dropdown(btn);
            }
        });
    });
</script>
