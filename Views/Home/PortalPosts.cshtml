@model JAS_MINE_IT15.Models.PortalPostsViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Portal Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var canModify = Model?.CanModify ?? false;
    var posts = Model?.Posts ?? new List<JAS_MINE_IT15.Models.PortalPostItem>();
}

<style>
    .page-title { font-size: 28px; font-weight: 800; color: #0f2747; margin: 0; display: flex; align-items: center; gap: 10px; }
    .page-subtitle { color: #6c7a89; margin-top: 4px; }
    .soft-card { background: #fff; border: 1px solid #e6edf5; border-radius: 12px; box-shadow: 0 4px 14px rgba(16,24,40,.06); }
    .btn-primary-custom { background: #163a5f; border-color: #163a5f; border-radius: 10px; height: 42px; font-weight: 700; padding: 0 18px; color: #fff; }
    .btn-primary-custom:hover { background: #102d49; border-color: #102d49; color: #fff; }
    .stat-card { padding: 20px; text-align: center; }
    .stat-value { font-size: 28px; font-weight: 800; color: #163a5f; }
    .stat-label { font-size: 13px; color: #6c7a89; margin-top: 4px; }
    .post-card { padding: 20px; margin-bottom: 16px; transition: box-shadow 0.2s; }
    .post-card:hover { box-shadow: 0 6px 20px rgba(16,24,40,.1); }
    .post-title { font-size: 18px; font-weight: 700; color: #1f2d3d; margin-bottom: 8px; }
    .post-meta { color: #6c7a89; font-size: 13px; display: flex; align-items: center; gap: 16px; margin-bottom: 10px; }
    .post-excerpt { color: #4a5568; line-height: 1.6; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; }
    .tag-badge { background: #f1f5f9; color: #64748b; border-radius: 999px; padding: 4px 10px; font-size: 12px; font-weight: 600; margin-right: 6px; }
    .pinned-badge { background: #fef3c7; color: #b45309; border-radius: 999px; padding: 4px 10px; font-size: 12px; font-weight: 700; }
    .modal .form-label { font-weight: 700; color: #1f2d3d; }
    .modal .form-control, .modal .form-select { border-radius: 10px; border: 1px solid #d9e3ef; }
    .alert { border-radius: 10px; }
</style>

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between gap-3 mb-4">
        <div>
            <div class="page-title"><i class="bi bi-megaphone" style="color:#3b82f6;"></i> Portal Posts</div>
            <div class="page-subtitle">Share news, updates, and announcements with the community</div>
        </div>
        @if (canModify)
        {
            <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="bi bi-plus-lg me-2"></i>New Post
            </button>
        }
    </div>

    @if (!string.IsNullOrEmpty(Model?.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-4">
            <div class="soft-card stat-card">
                <div class="stat-value">@Model?.TotalPosts</div>
                <div class="stat-label">Total Posts</div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="soft-card stat-card">
                <div class="stat-value">@Model?.PinnedPosts</div>
                <div class="stat-label">Pinned</div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="soft-card stat-card">
                <div class="stat-value">@Model?.RecentPosts</div>
                <div class="stat-label">This Week</div>
            </div>
        </div>
    </div>

    <!-- Search -->
    <form method="get" asp-action="PortalPosts" class="soft-card p-3 mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-10">
                <label class="form-label fw-bold">Search by Title/Tags</label>
                <input type="text" name="q" value="@Model?.SearchQuery" class="form-control" placeholder="Search posts..." />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary-custom w-100">Search</button>
            </div>
        </div>
    </form>

    <!-- Posts List -->
    <div class="row">
        <div class="col-12">
            @if (posts.Count == 0)
            {
                <div class="soft-card p-4 text-center text-muted">No posts found.</div>
            }
            else
            {
                foreach (var post in posts)
                {
                    <div class="soft-card post-card">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    @if (post.IsPinned)
                                    {
                                        <span class="pinned-badge"><i class="bi bi-pin-fill me-1"></i>Pinned</span>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(post.Tags))
                                    {
                                        foreach (var tag in post.Tags.Split(',').Take(3))
                                        {
                                            <span class="tag-badge">@tag.Trim()</span>
                                        }
                                    }
                                </div>
                                <h3 class="post-title">@post.Title</h3>
                                <div class="post-meta">
                                    <span><i class="bi bi-person me-1"></i>@post.PostedBy</span>
                                    <span><i class="bi bi-calendar3 me-1"></i>@post.PostedOn.ToString("MMM dd, yyyy")</span>
                                </div>
                                <p class="post-excerpt">@(post.Content.Length > 200 ? post.Content.Substring(0, 200) + "..." : post.Content)</p>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-light" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-action="PortalPostDetails" asp-route-id="@post.Id"><i class="bi bi-eye me-2"></i>View Details</a></li>
                                    @if (canModify)
                                    {
                                        <li><a class="dropdown-item" href="#" onclick="editPost(@post.Id, '@post.Title.Replace("'", "\\'")','@post.Content.Replace("'", "\\'").Replace("\n", "\\n").Replace("\r", "")','@(post.Tags?.Replace("'", "\\'") ?? "")', @(post.IsPinned ? "true" : "false"))"><i class="bi bi-pencil me-2"></i>Edit</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="ArchivePortalPost" method="post" onsubmit="return confirm('Archive this post?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@post.Id" />
                                                <button type="submit" class="dropdown-item text-danger"><i class="bi bi-archive me-2"></i>Archive</button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius:14px;border:0;">
            <form asp-action="CreatePortalPost" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">New Post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <input type="text" name="title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content <span class="text-danger">*</span></label>
                        <textarea name="content" class="form-control" rows="6" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tags (comma-separated)</label>
                        <input type="text" name="tags" class="form-control" placeholder="news, update, important" />
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="isPinned" value="true" class="form-check-input" id="createPinned" />
                        <label class="form-check-label" for="createPinned">Pin this post</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius:10px;">Cancel</button>
                    <button type="submit" class="btn btn-primary-custom">Create Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius:14px;border:0;">
            <form asp-action="EditPortalPost" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="editId" />
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Edit Post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <input type="text" name="title" id="editTitle" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content <span class="text-danger">*</span></label>
                        <textarea name="content" id="editContent" class="form-control" rows="6" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tags (comma-separated)</label>
                        <input type="text" name="tags" id="editTags" class="form-control" />
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="isPinned" value="true" class="form-check-input" id="editPinned" />
                        <label class="form-check-label" for="editPinned">Pin this post</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius:10px;">Cancel</button>
                    <button type="submit" class="btn btn-primary-custom">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function editPost(id, title, content, tags, isPinned) {
        document.getElementById('editId').value = id;
        document.getElementById('editTitle').value = title;
        document.getElementById('editContent').value = content.replace(/\\n/g, '\n');
        document.getElementById('editTags').value = tags;
        document.getElementById('editPinned').checked = isPinned;
        new bootstrap.Modal(document.getElementById('editModal')).show();
    }
</script>
