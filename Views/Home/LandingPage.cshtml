@{
    ViewData["Title"] = "JAS-MINE Landing";
    Layout = null; 
    var year = DateTime.Now.Year;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        /* Navbar blur */
        .nav-blur {
            background: rgba(255,255,255,.92);
            backdrop-filter: blur(10px);
        }

        .hero {
            min-height: 78vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(circle at 70% 15%, rgba(47, 222, 173, .10) 0%, rgba(0,0,0,0) 55%), linear-gradient(180deg, #0b2f4d 0%, #0a3557 35%, #1b4d72 100%);
            color: #fff;
        }

            .hero h1 {
                letter-spacing: .2px;
            }

            .hero p {
                max-width: 840px;
            }

        .btn-hero {
            min-width: 120px;
            border-radius: 10px;
            padding: 12px 18px;
            font-weight: 400;
        }

        .btn-subscribe {
            background: #2e8b3c;
            border-color: #2e8b3c;
        }

            .btn-subscribe:hover {
                background: #267433;
                border-color: #267433;
            }

        /* Section spacing */
        .section-pad {
            padding: 72px 0;
        }

        /* Small feature icon badge */
        .icon-badge {
            height: 60px;
            width: 60px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(13,110,253,.12);
            color: #0d6efd;
            font-size: 20px;
        }
    </style>
</head>

<body class="bg-light">

    <!-- Navbar -->
    <header style="background:#f3f4f6; border-bottom:1px solid #e5e7eb;">
        <div class="container d-flex justify-content-between align-items-center py-3">

            <!-- Logo + Brand -->
            <div class="d-flex align-items-center gap-2">
                <img src="~/images/jasmine-logo.png"
                     style="height:60px; width:60px; object-fit:contain;" />
                <span style="font-weight:700; font-size:20px; color:#1f3f63;">
                    JAS-MINE
                </span>
            </div>

            <!-- Buttons -->
            <div class="d-flex gap-2">
                <a asp-controller="Home" asp-action="Login"
                   class="btn"
                   style="border:1px solid #d1d5db; background:#ffffff; color:#374151; padding:6px 16px; border-radius:8px;">
                    Login
                </a>

                <a asp-controller="Home" asp-action="Login"
                   class="btn"
                   style="background:#1f3f63; color:white; padding:6px 16px; border-radius:8px;">
                    Subscribe
                </a>
            </div>

        </div>
    </header>


    <!-- Hero -->
    <section class="hero">
        <div class="container text-center py-5">
            <h1 class="fw-bold display-5">
                JAS-MINE ERP System for Barangays
            </h1>

            <p class="mx-auto mt-3 text-white-50 fs-6 fs-md-5">
                Centralized ERP-based Knowledge Management System designed to help barangays manage documents,
                policies, and operational knowledge efficiently and securely.
            </p>

            <div class="mt-4 d-flex flex-column flex-sm-row gap-3 justify-content-center">
                <a class="btn btn-light btn-hero" asp-controller="Home" asp-action="Login">Login</a>
                <a class="btn btn-subscribe text-white btn-hero" asp-controller="Home" asp-action="Login">
                    Subscribe Now <span class="ms-2">→</span>
                </a>
            </div>
        </div>
    </section>

    <!-- Features -->
    <section class="section-pad bg-white">
        <div class="container">
            <div class="text-center mb-4">
                <h2 class="fw-bold">Featured Modules</h2>
                <p class="text-muted mb-0">Core modules powering barangay knowledge management</p>
            </div>

            <div class="row g-3">
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body p-4">
                            <div class="icon-badge mb-3">📚</div>
                            <h5 class="fw-semibold">Knowledge Repository Module</h5>
                            <p class="text-muted mb-0">Store, organize, and access official barangay documents in a centralized and secure repository.</p>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body p-4">
                            <div class="icon-badge mb-3">📄</div>
                            <h5 class="fw-semibold">Policy and Procedures Management Module</h5>
                            <p class="text-muted mb-0">Create, update, and manage barangay policies and procedures with approval tracking.</p>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body p-4">
                            <div class="icon-badge mb-3">💡</div>
                            <h5 class="fw-semibold">Lessons Learned Management Module</h5>
                            <p class="text-muted mb-0">Record and review lessons learned from past barangay activities to improve future decisions.</p>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body p-4">
                            <div class="icon-badge mb-3">🏆</div>
                            <h5 class="fw-semibold">Best Practices Database Module</h5>
                            <p class="text-muted mb-0">Maintain a collection of proven best practices to guide barangay staff operations.</p>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body p-4">
                            <div class="icon-badge mb-3">🔗</div>
                            <h5 class="fw-semibold">Knowledge Sharing Portal Module</h5>
                            <p class="text-muted mb-0">Allow barangay staff to share discussions, announcements, and knowledge collaboratively.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Plans -->
    <section class="py-5" style="background:#f5f6f8;">
        <div class="container py-4">

            <div class="text-center mb-5">
                <h2 class="fw-bold" style="font-size: 36px;">Subscription Plans</h2>
                <p class="text-muted" style="font-size: 16px;">
                    Choose a plan that fits your barangay's needs
                </p>
            </div>

            <div class="row g-4 justify-content-center align-items-stretch">

                <!-- Basic Plan -->
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0" style="border-radius:14px;">
                        <div class="card-body p-5 d-flex flex-column">
                            <h4 class="fw-bold text-center mb-4">Basic Plan</h4>

                            <div class="mb-4">
                                <div class="d-flex align-items-start gap-2 mb-3">
                                    <span class="text-success fw-bold">✓</span>
                                    <span>Knowledge Repository Module</span>
                                </div>
                                <div class="d-flex align-items-start gap-2">
                                    <span class="text-success fw-bold">✓</span>
                                    <span>Policy Management Module</span>
                                </div>
                            </div>

                            <a class="btn btn-outline-secondary mt-auto"
                               style="border-radius:10px; padding:10px 14px;"
                               asp-controller="Home" asp-action="Login">
                                Subscribe
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Standard Plan (Most Popular) -->
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm"
                         style="border-radius:14px; border:2px solid #1f3f63;">
                        <div class="card-body p-5 d-flex flex-column position-relative">

                            <!-- Most Popular pill -->
                            <div class="position-absolute top-0 start-50 translate-middle">
                                <span class="badge text-white"
                                      style="background:#1f3f63; padding:7px 16px; border-radius:999px; font-weight:600;">
                                    ☆ Most Popular
                                </span>
                            </div>

                            <h4 class="fw-bold text-center mb-4 mt-2">Standard Plan</h4>

                            <div class="mb-4">
                                <div class="d-flex align-items-start gap-2 mb-3">
                                    <span class="text-success fw-bold">✓</span>
                                    <span>All Basic features</span>
                                </div>
                                <div class="d-flex align-items-start gap-2 mb-3">
                                    <span class="text-success fw-bold">✓</span>
                                    <span>Lessons Learned Module</span>
                                </div>
                                <div class="d-flex align-items-start gap-2">
                                    <span class="text-success fw-bold">✓</span>
                                    <span>Best Practices Module</span>
                                </div>
                            </div>

                            <a class="btn text-white mt-auto"
                               style="background:#1f3f63; border-radius:10px; padding:10px 14px;"
                               asp-controller="Home" asp-action="Login">
                                Subscribe
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Enterprise Plan -->
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0" style="border-radius:14px;">
                        <div class="card-body p-5 d-flex flex-column">
                            <h4 class="fw-bold text-center mb-4">Enterprise Plan</h4>

                            <div class="mb-4">
                                <div class="d-flex align-items-start gap-2 mb-3">
                                    <span class="text-success fw-bold">✓</span>
                                    <span>Full ERP access</span>
                                </div>
                                <div class="d-flex align-items-start gap-2 mb-3">
                                    <span class="text-success fw-bold">✓</span>
                                    <span>Knowledge Sharing Portal</span>
                                </div>
                                <div class="d-flex align-items-start gap-2 mb-3">
                                    <span class="text-success fw-bold">✓</span>
                                    <span>Audit Logs</span>
                                </div>
                                <div class="d-flex align-items-start gap-2">
                                    <span class="text-success fw-bold">✓</span>
                                    <span>Full system access</span>
                                </div>
                            </div>

                            <a class="btn btn-outline-secondary mt-auto"
                               style="border-radius:10px; padding:10px 14px;"
                               asp-controller="Home" asp-action="Login">
                                Subscribe
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>


    <!-- Footer -->
    <footer class="border-top bg-white py-4">
        <div class="container text-center">
            <div class="d-flex align-items-center justify-content-center gap-2 mb-1">
                <img src="~/images/jasmine-logo.png" alt="JAS-MINE" style="height:24px;width:24px;object-fit:contain;" />
                <span class="fw-semibold text-primary">JAS-MINE ERP System</span>
            </div>
            <div class="text-muted small mb-1">Barangay Knowledge Management ERP</div>
            <div class="text-muted">© @year JAS-MINE: An Integrated ERP-Based Knowledge Management System for Barangays. All rights reserved.</div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
