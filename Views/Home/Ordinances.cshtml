@model JAS_MINE_IT15.Models.OrdinancesViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Ordinances";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    string StatusBadgeClass(string status) => status switch
    {
        "Active" => "badge bg-success",
        "Archived" => "badge bg-secondary",
        _ => "badge bg-light text-dark border"
    };
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .page-wrap { padding: 18px; }
    .stat-card { border-radius: 12px; }
    .table-wrap { border: 1px solid #e5e7eb; border-radius: 12px; overflow: hidden; }
    .muted { color: #6b7280; }
    .kebab { width: 38px; height: 38px; border-radius: 10px; }
    .ord-icon { width: 40px; height: 40px; border-radius: 10px; background: rgba(13,110,253,.10); display: flex; align-items: center; justify-content: center; color: #0d6efd; }
</style>

<div class="page-wrap">

    <!-- Page title + Add Ordinance -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h3 class="mb-0"><i class="bi bi-journal-text me-2"></i>Ordinances</h3>
            <div class="muted">Manage barangay ordinances and resolutions.</div>
        </div>
        @if (Model.CanCreate)
        {
            <button class="btn btn-primary d-flex align-items-center gap-2"
                    data-bs-toggle="modal"
                    data-bs-target="#createEditModal"
                    onclick="openCreate()">
                <span style="font-weight:900;">+</span>
                Add Ordinance
            </button>
        }
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stat cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-primary">@Model.TotalOrdinances</div>
                    <div class="small muted">Total Ordinances</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-success">@Model.ActiveOrdinances</div>
                    <div class="small muted">Active</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body text-center py-4">
                    <div class="fs-2 fw-bold text-secondary">@Model.ArchivedOrdinances</div>
                    <div class="small muted">Archived</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="d-flex gap-2 flex-wrap align-items-center">
                <input name="q" class="form-control" style="max-width: 300px;" placeholder="Search by ordinance no. or title..." value="@Model.SearchQuery" />
                <select name="status" class="form-select" style="max-width: 150px;">
                    <option value="all" selected="@(Model.StatusFilter == "all")">All Status</option>
                    <option value="Active" selected="@(Model.StatusFilter == "Active")">Active</option>
                    <option value="Archived" selected="@(Model.StatusFilter == "Archived")">Archived</option>
                </select>
                <select name="year" class="form-select" style="max-width: 120px;">
                    <option value="">All Years</option>
                    @foreach (var y in Model.AvailableYears)
                    {
                        <option value="@y" selected="@(Model.YearFilter == y)">@y</option>
                    }
                </select>
                <button type="submit" class="btn btn-outline-primary">Filter</button>
                <a href="@Url.Action("Ordinances")" class="btn btn-outline-secondary">Clear</a>
            </form>
        </div>
    </div>

    <!-- Ordinances table -->
    <div class="card">
        <div class="card-body">
            <div class="fw-semibold mb-3">Ordinances (@Model.Ordinances.Count)</div>
            <div class="table-wrap">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="min-width: 350px;">Ordinance</th>
                            <th class="d-none d-md-table-cell">Category</th>
                            <th class="d-none d-md-table-cell">Date Approved</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Ordinances.Any())
                        {
                            <tr><td colspan="5" class="text-center text-muted py-4">No ordinances found.</td></tr>
                        }
                        else
                        {
                            @foreach (var o in Model.Ordinances)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="ord-icon"><i class="bi bi-journal-text"></i></div>
                                            <div>
                                                <div class="fw-semibold">@o.OrdinanceNo (Series @o.SeriesYear)</div>
                                                <div class="small muted">@o.Title</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="d-none d-md-table-cell muted">@(o.Category ?? "-")</td>
                                    <td class="d-none d-md-table-cell muted">
                                        @(o.DateApproved.HasValue ? o.DateApproved.Value.ToString("MMM dd, yyyy") : "-")
                                    </td>
                                    <td><span class="@StatusBadgeClass(o.Status)">@o.Status</span></td>
                                    <td class="text-end">
                                        <div class="dropdown">
                                            <button class="btn btn-light kebab dropdown-toggle" data-bs-toggle="dropdown">â‹¯</button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#viewModal"
                                                            onclick="openView('@o.OrdinanceId','@js(o.OrdinanceNo)','@o.SeriesYear','@js(o.Title)','@js(o.Summary ?? "")','@(o.DateApproved?.ToString("yyyy-MM-dd") ?? "")','@(o.EffectiveDate?.ToString("yyyy-MM-dd") ?? "")','@js(o.Category ?? "")','@o.Status')">
                                                        <i class="bi bi-eye me-2"></i>View
                                                    </button>
                                                </li>
                                                @if (Model.CanEdit)
                                                {
                                                    <li>
                                                        <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#createEditModal"
                                                                onclick="openEdit('@o.OrdinanceId','@js(o.OrdinanceNo)','@o.SeriesYear','@js(o.Title)','@js(o.Summary ?? "")','@(o.DateApproved?.ToString("yyyy-MM-dd") ?? "")','@(o.EffectiveDate?.ToString("yyyy-MM-dd") ?? "")','@js(o.Category ?? "")','@o.Status')">
                                                            <i class="bi bi-pencil me-2"></i>Edit
                                                        </button>
                                                    </li>
                                                }
                                                @if (Model.CanArchive)
                                                {
                                                    <li><hr class="dropdown-divider" /></li>
                                                    <li>
                                                        <form method="post" asp-action="ArchiveOrdinance" asp-route-id="@o.OrdinanceId" asp-route-q="@Model.SearchQuery" asp-route-status="@Model.StatusFilter" asp-route-year="@Model.YearFilter">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Archive this ordinance?')">
                                                                <i class="bi bi-archive me-2"></i>Archive
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- View Modal -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ordinance Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h5 id="vOrdinanceNo" class="text-primary"></h5>
                <h6 id="vTitle" class="mb-3"></h6>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Series Year</dt><dd class="col-sm-8" id="vYear"></dd>
                    <dt class="col-sm-4">Category</dt><dd class="col-sm-8" id="vCategory"></dd>
                    <dt class="col-sm-4">Date Approved</dt><dd class="col-sm-8" id="vDateApproved"></dd>
                    <dt class="col-sm-4">Effective Date</dt><dd class="col-sm-8" id="vEffectiveDate"></dd>
                    <dt class="col-sm-4">Status</dt><dd class="col-sm-8" id="vStatus"></dd>
                </dl>
                <hr />
                <div><b>Summary:</b></div>
                <p id="vSummary" class="text-muted" style="white-space: pre-wrap;"></p>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="createEditModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="ordinanceForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Add Ordinance</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="fId" />
                    <input type="hidden" name="q" value="@Model.SearchQuery" />
                    <input type="hidden" name="status" value="@Model.StatusFilter" />
                    <input type="hidden" name="year" value="@Model.YearFilter" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Ordinance No. *</label>
                            <input type="text" name="ordinanceNo" id="fOrdinanceNo" class="form-control" required placeholder="e.g., 2024-001" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Series Year *</label>
                            <input type="number" name="seriesYear" id="fSeriesYear" class="form-control" required value="@DateTime.Now.Year" min="1900" max="2100" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Title *</label>
                            <input type="text" name="title" id="fTitle" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Category</label>
                            <select name="category" id="fCategory" class="form-select">
                                <option value="">Select category...</option>
                                @foreach (var cat in Model.Categories)
                                {
                                    <option value="@cat">@cat</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <select name="newStatus" id="fStatus" class="form-select">
                                <option value="Active">Active</option>
                                <option value="Archived">Archived</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date Approved</label>
                            <input type="date" name="dateApproved" id="fDateApproved" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Effective Date</label>
                            <input type="date" name="effectiveDate" id="fEffectiveDate" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Summary</label>
                            <textarea name="summary" id="fSummary" class="form-control" rows="4"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    public string js(string? s)
    {
        s ??= "";
        return s.Replace("\\", "\\\\").Replace("'", "\\'").Replace("\r", "").Replace("\n", "\\n");
    }
}

<script>
    function openCreate() {
        document.getElementById('modalTitle').textContent = 'Add Ordinance';
        document.getElementById('ordinanceForm').action = '@Url.Action("CreateOrdinance")';
        document.getElementById('fId').value = '';
        document.getElementById('fOrdinanceNo').value = '';
        document.getElementById('fSeriesYear').value = new Date().getFullYear();
        document.getElementById('fTitle').value = '';
        document.getElementById('fCategory').value = '';
        document.getElementById('fStatus').value = 'Active';
        document.getElementById('fDateApproved').value = '';
        document.getElementById('fEffectiveDate').value = '';
        document.getElementById('fSummary').value = '';
    }

    function openEdit(id, ordinanceNo, seriesYear, title, summary, dateApproved, effectiveDate, category, status) {
        document.getElementById('modalTitle').textContent = 'Edit Ordinance';
        document.getElementById('ordinanceForm').action = '@Url.Action("EditOrdinance")';
        document.getElementById('fId').value = id;
        document.getElementById('fOrdinanceNo').value = ordinanceNo;
        document.getElementById('fSeriesYear').value = seriesYear;
        document.getElementById('fTitle').value = title;
        document.getElementById('fCategory').value = category;
        document.getElementById('fStatus').value = status;
        document.getElementById('fDateApproved').value = dateApproved;
        document.getElementById('fEffectiveDate').value = effectiveDate;
        document.getElementById('fSummary').value = summary;
    }

    function openView(id, ordinanceNo, seriesYear, title, summary, dateApproved, effectiveDate, category, status) {
        document.getElementById('vOrdinanceNo').textContent = ordinanceNo + ' (Series ' + seriesYear + ')';
        document.getElementById('vTitle').textContent = title;
        document.getElementById('vYear').textContent = seriesYear;
        document.getElementById('vCategory').textContent = category || '-';
        document.getElementById('vDateApproved').textContent = dateApproved || '-';
        document.getElementById('vEffectiveDate').textContent = effectiveDate || '-';
        document.getElementById('vStatus').textContent = status;
        document.getElementById('vSummary').textContent = summary || 'No summary provided.';
    }
</script>
