@model JAS_MINE_IT15.Models.KnowledgeRepositoryViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Knowledge Repository";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Null-safe properties
    var canUpload = Model?.CanUpload ?? false;
    var canApprove = Model?.CanApprove ?? false;
    var canArchive = Model?.CanArchive ?? false;
    var archiveStatus = Model?.ArchiveStatus ?? "active";
    var searchQuery = Model?.SearchQuery ?? "";
    var selectedCategory = Model?.SelectedCategory ?? "All Categories";
    var selectedStatus = Model?.SelectedStatus ?? "all";
    var categories = Model?.Categories ?? new List<string> { "All Categories" };
    var documents = Model?.Documents ?? new List<JAS_MINE_IT15.Models.RepoDocument>();
    var totalDocuments = Model?.TotalDocuments ?? 0;
    var archivedDocuments = Model?.ArchivedDocuments ?? 0;
    var pendingDocuments = Model?.PendingDocuments ?? 0;
    var successMessage = Model?.SuccessMessage ?? "";
    var errorMessage = Model?.ErrorMessage ?? "";
}

<style>
    /* Page header */
    .page-title {
        font-size: 28px;
        font-weight: 800;
        color: #0f2747;
        margin: 0; 
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .page-subtitle {
        color: #6c7a89;
        margin-top: 4px;
    }

    /* Card-like sections */
    .soft-card {
        background: #fff;
        border: 1px solid #e6edf5;
        border-radius: 12px;
        box-shadow: 0 4px 14px rgba(16, 24, 40, .06);
    }

    /* Search & select inside filter bar */
    .filter-wrap {
        padding: 16px;
    }

    .input-soft, .select-soft {
        height: 46px;
        border-radius: 10px;
        border: 1px solid #d9e3ef;
    }

        .input-soft:focus, .select-soft:focus {
            box-shadow: none;
            border-color: #9bb7d6;
        }

    .input-icon-left {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #72839a;
        font-size: 16px;
        pointer-events: none;
    }

    .input-with-icon {
        padding-left: 42px;
    }

    /* Upload button (top right) */
    .btn-upload {
        height: 44px;
        border-radius: 10px;
        font-weight: 600;
        background: #163a5f;
        border-color: #163a5f;
    }

        .btn-upload:hover {
            background: #102d49;
            border-color: #102d49;
        }

    /* Table style */
    .table thead th {
        color: #6c7a89;
        font-weight: 700;
        border-bottom: 1px solid #e6edf5 !important;
        padding-top: 14px;
        padding-bottom: 14px;
        white-space: nowrap;
    }

    .table tbody td {
        vertical-align: middle;
        border-bottom: 1px solid #eef3f8 !important;
        padding-top: 14px;
        padding-bottom: 14px;
    }

    .doc-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: #eef4ff;
        display: grid;
        place-items: center;
        color: #163a5f;
        flex: 0 0 auto;
    }

    .doc-title {
        font-weight: 700;
        color: #1f2d3d;
        margin: 0;
    }

    .doc-tags {
        color: #6c7a89;
        font-size: 12px;
        display: flex;
        align-items: center;
        gap: 6px;
        margin-top: 3px;
    }

    /* Badges */
    .badge-approved {
        background: #e8f7ee;
        color: #1e7a3a;
        border-radius: 999px;
        padding: 6px 10px;
        font-weight: 700;
        font-size: 12px;
        display: inline-block;
        line-height: 1;
    }

    .badge-pending {
        background: #fff3df;
        color: #b76a00;
        border-radius: 999px;
        padding: 6px 10px;
        font-weight: 700;
        font-size: 12px;
        display: inline-block;
        line-height: 1;
    }

    .badge-draft {
        background: #eef2f6;
        color: #5a6b7f;
        border-radius: 999px;
        padding: 6px 10px;
        font-weight: 700;
        font-size: 12px;
        display: inline-block;
        line-height: 1;
    }

    .badge-rejected {
        background: #fde8e8;
        color: #dc3545;
        border-radius: 999px;
        padding: 6px 10px;
        font-weight: 700;
        font-size: 12px;
        display: inline-block;
        line-height: 1;
    }

    /* Actions button */
    .btn-actions {
        border: 0;
        background: transparent;
        width: 40px;
        height: 40px;
        border-radius: 10px;
    }

        .btn-actions:hover {
            background: #f2f6fb;
        }

    /* Responsive hide columns like screenshot */
    @@media (max-width: 991.98px) { /* lg down */
        .col-uploadedby {
            display: none;
        }
    }

    @@media (max-width: 767.98px) { /* md down */
        .col-category {
            display: none;
        }

        .col-date {
            display: none;
        }
    }
</style>

<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex flex-column flex-md-row align-items-md-start justify-content-between gap-3 mb-4">
        <div>
            <div class="page-title">
                <i class="bi bi-folder2-open"></i>
                Knowledge Repository
            </div>
            <div class="page-subtitle">Manage and access barangay documents securely</div>
        </div>

        @if (canUpload)
        {
            <button class="btn btn-primary btn-upload px-4" data-bs-toggle="modal" data-bs-target="#uploadModal">
                <i class="bi bi-upload me-2"></i>
                Upload Document
            </button>
        }
    </div>

    @if (!string.IsNullOrWhiteSpace(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@errorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Admin Notification: Pending Files Need Review *@
    @if (canApprove && pendingDocuments > 0)
    {
        <div class="alert alert-warning d-flex align-items-center justify-content-between" role="alert">
            <div>
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>@pendingDocuments document(s) pending review.</strong> Please review and approve or reject uploaded files.
            </div>
            <a href="@Url.Action("KnowledgeRepository", "Home", new { status = "pending", archiveStatus = "active" })" class="btn btn-warning btn-sm">
                <i class="bi bi-eye me-1"></i> View Pending
            </a>
        </div>
    }

    <!-- Archive Status Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link @(archiveStatus == "active" ? "active" : "")"
               href="@Url.Action("KnowledgeRepository", "Home", new { q = searchQuery, category = selectedCategory, status = selectedStatus, archiveStatus = "active" })">
                <i class="bi bi-check-circle me-1"></i> Active (@totalDocuments)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(archiveStatus == "archived" ? "active" : "")"
               href="@Url.Action("KnowledgeRepository", "Home", new { q = searchQuery, category = selectedCategory, status = selectedStatus, archiveStatus = "archived" })">
                <i class="bi bi-archive me-1"></i> Archived (@archivedDocuments)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(archiveStatus == "all" ? "active" : "")"
               href="@Url.Action("KnowledgeRepository", "Home", new { q = searchQuery, category = selectedCategory, status = selectedStatus, archiveStatus = "all" })">
                <i class="bi bi-list-ul me-1"></i> All
            </a>
        </li>
    </ul>

    <!-- Filters Card -->
    <div class="soft-card mb-4">
        <div class="filter-wrap">
            <form method="get" action="@Url.Action("KnowledgeRepository","Home")">
                <input type="hidden" name="archiveStatus" value="@archiveStatus" />
                <div class="row g-3 align-items-center">
                    <div class="col-12 col-lg-6 position-relative">
                        <i class="bi bi-search input-icon-left"></i>
                        <input class="form-control input-soft input-with-icon"
                               name="q"
                               value="@searchQuery"
                               placeholder="Search by title, tags..." />
                    </div>

                    <div class="col-12 col-lg-3">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"
                                  style="border-radius:10px 0 0 10px; border:1px solid #d9e3ef; height:46px;">
                                <i class="bi bi-funnel"></i>
                            </span>
                            <select class="form-select select-soft border-start-0"
                                    name="category"
                                    style="border-radius:0 10px 10px 0;">
                                @foreach (var c in categories)
                                {
                                    <option value="@c" selected="@(selectedCategory == c)">@c</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-12 col-lg-3">
                        <select class="form-select select-soft" name="status" onchange="this.form.submit()">
                            <option value="all" selected="@(selectedStatus == "all")">All Status</option>
                            <option value="draft" selected="@(selectedStatus == "draft")">Draft</option>
                            <option value="pending" selected="@(selectedStatus == "pending")">Pending</option>
                            <option value="approved" selected="@(selectedStatus == "approved")">Approved</option>
                            <option value="rejected" selected="@(selectedStatus == "rejected")">Rejected</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Documents Table Card -->
    <div class="soft-card">
        <div class="p-4">
            <h5 class="fw-bold mb-3">Documents (@documents.Count)</h5>

            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="min-width: 360px;">Document</th>
                            <th class="col-category">Category</th>
                            <th class="col-uploadedby">Uploaded By</th>
                            <th class="col-date">Date</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (documents.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">No documents found.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var doc in documents)
                            {
                                string badgeHtml = doc.Status switch
                                {
                                                "approved" => "<span class=\"badge-approved\">Approved</span>",
                                                "pending" => "<span class=\"badge-pending\">Pending</span>",
                                                "rejected" => "<span class=\"badge-rejected\">Rejected</span>",
                                    _ => "<span class=\"badge-draft\">Draft</span>"
                                };

                                <tr class="@(doc.IsArchived ? "opacity-75" : "")">
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="doc-icon">
                                                <i class="bi bi-file-earmark-text"></i>
                                            </div>
                                            <div>
                                                <p class="doc-title">
                                                    @if (doc.IsArchived)
                                                    {
                                                        <span class="badge bg-secondary me-2">Archived</span>
                                                    }
                                                    @doc.Title
                                                </p>
                                                <div class="doc-tags">
                                                    <i class="bi bi-tag"></i>
                                                    @doc.TagsCsv
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="col-category text-muted">@doc.Category</td>
                                    <td class="col-uploadedby text-muted">
                                        <i class="bi bi-person me-1"></i> @doc.UploadedBy
                                    </td>
                                    <td class="col-date text-muted">
                                        <i class="bi bi-calendar3 me-1"></i> @doc.Date
                                    </td>
                                    <td>@Html.Raw(badgeHtml)</td>
                                    <td class="text-end">
                                        @* Quick approve/reject buttons for pending documents *@
                                        @if (canApprove && doc.Status.Equals("pending", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <div class="d-inline-flex gap-1 me-2">
                                                <form method="post" action="@Url.Action("ApproveDoc","Home")" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@doc.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                </form>
                                                <form method="post" action="@Url.Action("RejectDoc","Home")" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@doc.Id" />
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Reject">
                                                        <i class="bi bi-x-lg"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        <div class="dropdown d-inline-block">
                                            <button type="button" class="btn-actions" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                                <!-- VIEW -->
                                                <li>
                                                    <button type="button" class="dropdown-item"
                                                            data-bs-toggle="modal" data-bs-target="#viewModal"
                                                            onclick="openView('@doc.Id','@js(doc.Title)','@js(doc.Category)','@js(doc.TagsCsv)','@js(doc.Description)','@js(doc.UploadedBy)','@doc.Date','@doc.Status','@doc.Version','@js(doc.FileName)','@js(doc.FilePath)')">
                                                        <i class="bi bi-eye me-2"></i>View
                                                    </button>
                                                </li>


                                                @if (!doc.IsArchived)
                                                {
                                                    <!-- EDIT (only if canUpload) -->
                                                    @if (canUpload)
                                                    {
                                                        <li>
                                                            <button type="button" class="dropdown-item"
                                                                    data-bs-toggle="modal" data-bs-target="#editModal"
                                                                    onclick="openEdit('@doc.Id','@js(doc.Title)','@js(doc.Category)','@js(doc.TagsCsv)','@js(doc.Description)','@js(doc.FileName)','@js(doc.FilePath)')">
                                                                <i class="bi bi-pencil me-2"></i>Edit
                                                            </button>
                                                        </li>
                                                    }

                                                    @if (!string.IsNullOrEmpty(doc.FilePath))
                                                    {
                                                        <li>
                                                            <a class="dropdown-item" href="@doc.FilePath" target="_blank" download>
                                                                <i class="bi bi-download me-2"></i>Download
                                                            </a>
                                                        </li>
                                                    }

                                                    <!-- APPROVE/REJECT (only if canApprove and pending) -->
                                                    @if (canApprove && doc.Status.Equals("pending", StringComparison.OrdinalIgnoreCase))
                                                    {
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="post" action="@Url.Action("ApproveDoc","Home")" class="m-0">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@doc.Id" />
                                                                <button class="dropdown-item text-success" type="submit">Approve</button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form method="post" action="@Url.Action("RejectDoc","Home")" class="m-0">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@doc.Id" />
                                                                <button class="dropdown-item text-danger" type="submit">Reject</button>
                                                            </form>
                                                        </li>
                                                    }

                                                    <!-- ARCHIVE (only if canArchive) -->
                                                    @if (canArchive)
                                                    {
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <button type="button" class="dropdown-item text-warning"
                                                                    data-bs-toggle="modal" data-bs-target="#archiveModal"
                                                                    onclick="openArchive('@doc.Id','@js(doc.Title)')">
                                                                <i class="bi bi-archive me-2"></i>Archive
                                                            </button>
                                                        </li>
                                                    }
                                                }
                                                else
                                                {
                                                    <!-- RESTORE (only if canArchive and archived) -->
                                                    @if (canArchive)
                                                    {
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="post" action="@Url.Action("RestoreDoc","Home")" class="m-0">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@doc.Id" />
                                                                <button class="dropdown-item text-success" type="submit">
                                                                    <i class="bi bi-arrow-counterclockwise me-2"></i>Restore
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>

<!-- UPLOAD MODAL -->
<div class="modal fade" id="uploadModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form method="post" action="@Url.Action("CreateDoc","Home")" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Upload New Document</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold">Document Title</label>
                            <input class="form-control input-soft" name="title" required />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold">Category</label>
                            <select class="form-select select-soft" name="category">
                                <option>Resolutions</option>
                                <option>Ordinances</option>
                                <option>Memorandums</option>
                                <option selected>Policies</option>
                                <option>Reports</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold">Tags (comma-separated)</label>
                            <input class="form-control input-soft" name="tags" placeholder="e.g. governance, budget" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Description</label>
                            <textarea class="form-control" rows="4" name="description"></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Attach File</label>
                            <input type="file" class="form-control" name="file" accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt,.jpg,.jpeg,.png" />
                            <small class="text-muted">Supported: PDF, Word, Excel, PowerPoint, Images (max 10MB)</small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary btn-upload" type="submit">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- EDIT MODAL -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form method="post" action="@Url.Action("EditDoc","Home")" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="eId" />
                <div class="modal-header">
                    <h5 class="modal-title">Edit Document</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold">Document Title</label>
                            <input class="form-control input-soft" name="title" id="eTitle" required />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold">Category</label>
                            <select class="form-select select-soft" name="category" id="eCategory">
                                <option>Resolutions</option>
                                <option>Ordinances</option>
                                <option>Memorandums</option>
                                <option>Policies</option>
                                <option>Reports</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold">Tags (comma-separated)</label>
                            <input class="form-control input-soft" name="tags" id="eTags" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Description</label>
                            <textarea class="form-control" rows="4" name="description" id="eDesc"></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Replace File (optional)</label>
                            <input type="file" class="form-control" name="file" accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt,.jpg,.jpeg,.png" />
                            <small class="text-muted">Leave empty to keep existing file</small>
                            <div id="eCurrentFile" class="mt-2"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary btn-upload" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- VIEW MODAL -->
<div class="modal fade" id="viewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="vTitle">Document</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-muted small mb-2" id="vMeta"></div>
                <div class="mb-2" id="vStatus"></div>
                <div class="text-muted" id="vDesc"></div>
                <hr />
                <div class="small text-muted">
                    <div><b>Category:</b> <span id="vCategory"></span></div>
                    <div><b>Tags:</b> <span id="vTags"></span></div>
                    <div><b>Uploaded By:</b> <span id="vBy"></span></div>
                    <div><b>Date:</b> <span id="vDate"></span></div>
                    <div><b>Version:</b> <span id="vVersion"></span></div>
                </div>
                <hr />
                <div><b>File:</b> <span id="vFile"></span></div>
            </div>
        </div>
    </div>
</div>

<!-- ARCHIVE MODAL -->
<div class="modal fade" id="archiveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" action="@Url.Action("ArchiveDoc","Home")">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="dId" />
                <div class="modal-header">
                    <h5 class="modal-title text-warning">Archive Document</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to archive "<span id="dTitle"></span>"?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-warning" type="submit">Archive</button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    // Safe JS string helper (prevents breaking quotes)
    public string js(string? s)
    {
        s ??= "";
        return s.Replace("\\", "\\\\").Replace("'", "\\'").Replace("\r", "").Replace("\n", "\\n");
    }
}

<script>
    function openEdit(id, title, category, tags, desc, fileName, filePath) {
        document.getElementById('eId').value = id;
        document.getElementById('eTitle').value = title;
        document.getElementById('eCategory').value = category;
        document.getElementById('eTags').value = tags;
        document.getElementById('eDesc').value = desc;
        
        var currentFileDiv = document.getElementById('eCurrentFile');
        if (fileName && filePath) {
            currentFileDiv.innerHTML = '<a href="' + filePath + '" target="_blank" class="text-primary"><i class="bi bi-file-earmark me-1"></i>' + fileName + '</a>';
        } else {
            currentFileDiv.innerHTML = '<span class="text-muted">No file attached</span>';
        }
    }

    function openView(id, title, category, tags, desc, by, date, status, version, fileName, filePath) {
        document.getElementById('vTitle').innerText = title;
        document.getElementById('vCategory').innerText = category;
        document.getElementById('vTags').innerText = tags;
        document.getElementById('vDesc').innerText = desc;
        document.getElementById('vBy').innerText = by;
        document.getElementById('vDate').innerText = date;
        document.getElementById('vVersion').innerText = version;

        let badge = "";
        if (status === "approved") badge = '<span class="badge-approved">Approved</span>';
        else if (status === "pending") badge = '<span class="badge-pending">Pending</span>';
        else if (status === "rejected") badge = '<span class="badge-rejected">Rejected</span>';
        else badge = '<span class="badge-draft">Draft</span>';

        document.getElementById('vStatus').innerHTML = badge;
        document.getElementById('vMeta').innerText = "Status: " + status + " • v" + version;
        
        var fileDiv = document.getElementById('vFile');
        if (fileDiv) {
            if (fileName && filePath) {
                fileDiv.innerHTML = '<a href="' + filePath + '" target="_blank" class="btn btn-sm btn-outline-primary"><i class="bi bi-download me-1"></i>Download ' + fileName + '</a>';
            } else {
                fileDiv.innerHTML = '<span class="text-muted">No file attached</span>';
            }
        }
    }

    function openArchive(id, title) {
        document.getElementById('dId').value = id;
        document.getElementById('dTitle').innerText = title;
    }
</script>
